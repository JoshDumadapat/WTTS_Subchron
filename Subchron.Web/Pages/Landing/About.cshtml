@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<!-- Hero -->
<section class="relative overflow-hidden bg-gradient-to-br from-subblue-50 via-white to-subgreen-50 py-20 lg:py-28 dark:from-slate-900 dark:via-slate-900 dark:to-slate-900">
