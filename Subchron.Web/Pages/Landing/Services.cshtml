@page
@model ServicesModel
@{
    ViewData["Title"] = "Services";
}

<!-- Hero -->
<section class="bg-slate-50 py-14 lg:py-20 dark:bg-slate-800/40">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <span class="inline-block rounded-full border border-subblue-200 bg-subblue-50 px-4 py-1.5 text-sm font-semibold text-subblue-700 dark:border-subblue-800 dark:bg-subblue-900/50 dark:text-subblue-200">Solutions</span>
        <h1 class="mt-4 text-4xl font-extrabold tracking-tight text-slate-900 lg:text-5xl dark:text-white">Built for on-site attendance</h1>
        <p class="mx-auto mt-4 max-w-2xl text-lg leading-relaxed text-slate-600 dark:text-slate-300">
            Subchron targets <strong>organizations with on-site work</strong> that need reliable, audit-ready attendance. Choose the attendance mode that fits your workplace—office, field, or both.
        </p>
    </div>
</section>

<!-- Section 1: Who Subchron is for -->
<section class="bg-slate-50 py-12 lg:py-16 dark:bg-slate-800/40">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-3xl text-center">
            <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Who Subchron is for</h2>
            <p class="mt-4 leading-relaxed text-slate-600 dark:text-slate-300">
                Companies and enterprises that need to track who is on-site, when they clock in and out, and where—with options for ID-based, phone-based, or hybrid attendance.
            </p>
            <p class="mt-4 leading-relaxed text-slate-600 dark:text-slate-300">
                Whether you run construction sites, offices, hospitals, or warehouses, one system can handle your entire workforce with audit-ready records.
            </p>
        </div>
    </div>
</section>

<!-- Choose your attendance mode – vertical carousel, width aligned with navbar (max-w-7xl) -->
<section class="bg-slate-50 py-14 lg:py-16 dark:bg-slate-800/40">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-center text-2xl font-extrabold text-slate-900 dark:text-white">Choose your attendance mode</h2>
        <p class="mx-auto mt-3 max-w-xl text-center leading-relaxed text-slate-600 dark:text-slate-400">
            Match the mode to your workplace: office-only, ID-based convenience, or field + office.
        </p>
        <div class="relative mt-10">
            <div id="attendanceCarousel" class="flex snap-x snap-mandatory gap-6 overflow-x-auto scroll-smooth pb-4 md:grid md:snap-none md:grid-cols-3 md:overflow-visible md:pb-0" style="-webkit-overflow-scrolling: touch;">
                <!-- Office-based -->
                <div class="min-w-[280px] flex-shrink-0 snap-center md:min-w-0">
                    <div class="flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-600 dark:bg-slate-800/90">
                        <div class="aspect-[4/3] overflow-hidden">
                            <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=600&q=80" alt="Office workspace" class="h-full w-full object-cover transition-transform duration-300 hover:scale-105" />
                        </div>
                        <div class="flex flex-1 flex-col space-y-2 p-4">
                            <span class="text-xs font-bold tracking-wider text-subgreen-600 uppercase dark:text-subgreen-400">Office-based</span>
                            <h3 class="text-base font-bold text-slate-900 dark:text-white">Biometric + geolocation</h3>
                            <p class="text-sm leading-relaxed text-slate-600 dark:text-slate-400">
                                Employees time in only <strong>at the office</strong>—via phone (face/fingerprint + location).
                            </p>
                            <a asp-page="/Features" class="mt-2 inline-flex items-center gap-1 text-sm font-semibold text-subgreen-600 hover:text-subgreen-700 dark:text-subgreen-400 dark:hover:text-subgreen-300">See features →</a>
                        </div>
                    </div>
                </div>
                <!-- ID / convenience -->
                <div class="min-w-[280px] flex-shrink-0 snap-center md:min-w-0">
                    <div class="flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-600 dark:bg-slate-800/90">
                        <div class="aspect-[4/3] overflow-hidden">
                            <img src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=600&q=80" alt="Construction site" class="h-full w-full object-cover transition-transform duration-300 hover:scale-105" />
                        </div>
                        <div class="flex flex-1 flex-col space-y-2 p-4">
                            <span class="text-xs font-bold tracking-wider text-subblue-600 uppercase dark:text-subblue-400">ID & convenience</span>
                            <h3 class="text-base font-bold text-slate-900 dark:text-white">QR scanning on ID</h3>
                            <p class="text-sm leading-relaxed text-slate-600 dark:text-slate-400">
                                Employees scan a <strong>QR on their ID</strong> (or at a station) to clock in/out.
                            </p>
                            <a asp-page="/Features" class="mt-2 inline-flex items-center gap-1 text-sm font-semibold text-subblue-600 hover:text-subblue-700 dark:text-subblue-400 dark:hover:text-subblue-300">See features →</a>
                        </div>
                    </div>
                </div>
                <!-- Field + office -->
                <div class="min-w-[280px] flex-shrink-0 snap-center md:min-w-0">
                    <div class="flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-600 dark:bg-slate-800/90">
                        <div class="aspect-[4/3] overflow-hidden">
                            <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=600&q=80" alt="Team collaboration" class="h-full w-full object-cover transition-transform duration-300 hover:scale-105" />
                        </div>
                        <div class="flex flex-1 flex-col space-y-2 p-4">
                            <span class="text-xs font-bold tracking-wider text-subgreen-600 uppercase dark:text-subgreen-400">Field + office</span>
                            <h3 class="text-base font-bold text-slate-900 dark:text-white">Hybrid: both modes</h3>
                            <p class="text-sm leading-relaxed text-slate-600 dark:text-slate-400">
                                Use <strong>QR for field/site</strong> and <strong>biometric + geo for office</strong> and make tracking simple.
                            </p>
                            <a asp-page="/Pricing" class="mt-2 inline-flex items-center gap-1 text-sm font-semibold text-subgreen-600 hover:text-subgreen-700 dark:text-subgreen-400 dark:hover:text-subgreen-300">View plans →</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Carousel nav (visible on small screens only) -->
            <div class="mt-4 flex justify-center gap-2 md:hidden">
                <button type="button" id="carouselPrev" class="rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700" aria-label="Previous">← Prev</button>
                <button type="button" id="carouselNext" class="rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700" aria-label="Next">Next →</button>
            </div>
        </div>
    </div>
</section>

<!-- Attendance mode in every plan – ONE ROW ONLY (dark cards fixed, layout unchanged) -->
<section class="bg-slate-50 py-12 lg:py-16 dark:bg-slate-800/40">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">

        <h2 class="text-center text-xl font-bold text-slate-900 dark:text-white">
            Attendance mode in every plan
        </h2>
        <p class="mx-auto mt-2 max-w-2xl text-center text-sm leading-relaxed text-slate-600 dark:text-slate-300">
            Choose how your team clocks in. Available in Basic, Standard, and Enterprise.
        </p>

        <!-- ONE ROW -->
        <div class="mx-auto mt-8 flex max-w-4xl flex-row gap-6">

            <!-- QR ONLY -->
            <div class="group flex w-1/3 flex-col items-center rounded-xl border border-slate-200 bg-white p-6 shadow-sm
                        transition-all duration-300 hover:-translate-y-1 hover:shadow-lg
                        dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100 dark:shadow-black/30 dark:hover:border-slate-600 dark:hover:shadow-black/40">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg
                            bg-subblue-100 text-subblue-600
                            transition-all duration-300 group-hover:scale-105
                            dark:bg-sky-500/10 dark:text-sky-300 dark:group-hover:bg-sky-500/20">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3 3h6v6H3V3zm12 0h6v6h-6V3zM3 15h6v6H3v-6zm8 0h2m4 0h4m-6 4h6" />
                    </svg>
                </div>
                <span class="mt-4 text-sm font-bold tracking-wider text-subblue-600 uppercase dark:text-sky-300">
                    QR only
                </span>
                <p class="mt-2 text-center text-sm leading-relaxed text-slate-600 dark:text-slate-300">
                    Scan QR at station or on ID. Fast, no devices.
                </p>
            </div>

            <!-- BIOMETRIC + GEO -->
            <div class="group flex w-1/3 flex-col items-center rounded-xl border border-slate-200 bg-white p-6 shadow-sm
                        transition-all duration-300 hover:-translate-y-1 hover:shadow-lg
                        dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100 dark:shadow-black/30 dark:hover:border-slate-600 dark:hover:shadow-black/40">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg
                            bg-subgreen-100 text-subgreen-600
                            transition-all duration-300 group-hover:scale-105
                            dark:bg-emerald-500/10 dark:text-emerald-300 dark:group-hover:bg-emerald-500/20">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M12 11c1.657 0 3 1.343 3 3v2m-6-2v2m9-2v2M6 14v2m12-2v2M12 5a7 7 0 00-7 7v1m14-1v-1a7 7 0 00-7-7" />
                    </svg>
                </div>
                <span class="mt-4 text-sm font-bold tracking-wider text-subgreen-600 uppercase dark:text-emerald-300">
                    Biometric + geolocation
                </span>
                <p class="mt-2 text-center text-sm leading-relaxed text-slate-600 dark:text-slate-300">
                    Face/fingerprint + location. Time in only from allowed places.
                </p>
            </div>

            <!-- HYBRID -->
            <div class="group flex w-1/3 flex-col items-center rounded-xl border border-slate-200 bg-white p-6 shadow-sm
                        transition-all duration-300 hover:-translate-y-1 hover:shadow-lg
                        dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100 dark:shadow-black/30 dark:hover:border-slate-600 dark:hover:shadow-black/40">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg
                            bg-subgreen-100 text-subgreen-600
                            transition-all duration-300 group-hover:scale-105
                            dark:bg-emerald-500/10 dark:text-emerald-300 dark:group-hover:bg-emerald-500/20">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M7 7l-4 4 4 4M17 17l4-4-4-4M3 11h18" />
                    </svg>
                </div>
                <span class="mt-4 text-sm font-bold tracking-wider text-subgreen-600 uppercase dark:text-emerald-300">
                    Hybrid (QR + bio + geo)
                </span>
                <p class="mt-2 text-center text-sm leading-relaxed text-slate-600 dark:text-slate-300">
                    Mix modes by role or site: QR for field, bio+geo for office.
                </p>
            </div>

        </div>
    </div>
</section>


@section Scripts {
<script>
(function() {
    var carousel = document.getElementById('attendanceCarousel');
    var prev = document.getElementById('carouselPrev');
    var next = document.getElementById('carouselNext');
    if (!carousel || !prev || !next) return;
    var cardWidth = 280 + 24;
    prev.addEventListener('click', function() { carousel.scrollBy({ left: -cardWidth, behavior: 'smooth' }); });
    next.addEventListener('click', function() { carousel.scrollBy({ left: cardWidth, behavior: 'smooth' }); });
})();
</script>
}
