@page
@model HowItWorksModel
@{
    ViewData["Title"] = "How It Works";
}

<!-- Hero -->
<section class="relative overflow-hidden bg-gradient-to-br from-subgreen-50 via-white to-subblue-50 py-20 lg:py-28 dark:from-slate-900 dark:via-slate-900 dark:to-slate-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid items-center gap-12 lg:grid-cols-2">
            <div data-reveal class="reveal-base">
                <span class="text-sm font-bold tracking-widest text-subgreen-600 uppercase dark:text-subgreen-400">Process</span>
                <h1 class="mt-4 text-4xl font-extrabold tracking-tight text-slate-900 lg:text-5xl dark:text-slate-100">How It Works</h1>
                <p class="mt-6 max-w-xl text-lg leading-relaxed text-slate-600 dark:text-slate-300">
                    A simple flow from setup to exports—no confusion.
                </p>
                <a asp-page="/Contact" class="btn-primary-glow mt-8 inline-flex rounded-xl bg-gradient-to-r from-subgreen-500 to-subgreen-600 px-6 py-3 text-sm font-bold text-white shadow-lg transition-all hover:-translate-y-0.5 dark:from-subgreen-500 dark:to-subgreen-600">
                    Get started
                </a>
            </div>
            <div data-reveal class="reveal-base hidden lg:block">
                <div class="overflow-hidden rounded-2xl border border-slate-200/80 shadow-xl ring-1 ring-slate-900/5 dark:border-slate-600 dark:ring-slate-700">
                    <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&q=80" alt="Workflow and analytics" class="h-72 w-full object-cover lg:h-80" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Steps -->
<section class="bg-slate-50 py-20 dark:bg-slate-800/40">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-14 text-center">
            <span class="text-sm font-bold tracking-widest text-subblue-600 uppercase dark:text-subblue-400">Four steps</span>
            <h2 class="mt-3 text-3xl font-extrabold text-slate-900 dark:text-slate-100">From setup to export</h2>
        </div>
        <div class="grid gap-8 md:grid-cols-2">
            <div data-reveal class="card-hover group flex gap-6 rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm ring-1 ring-slate-900/5 transition-all hover:ring-subblue-200 md:p-8 dark:border-slate-600 dark:bg-slate-800 dark:ring-slate-700 dark:hover:ring-subblue-500/50">
                <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-2xl bg-subblue-100 text-subblue-600 transition-transform group-hover:scale-110 dark:bg-subblue-900/50 dark:text-subblue-300">
                    <span class="text-xl font-extrabold">1</span>
                </div>
                <div>
                    <span class="text-sm font-bold tracking-wider text-subblue-600 uppercase dark:text-subblue-400">Step 1</span>
                    <h3 class="mt-2 text-xl font-bold text-slate-900 dark:text-slate-100">Choose tier</h3>
                    <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">Basic, Standard, or Enterprise.</p>
                </div>
            </div>
            <div data-reveal class="card-hover group flex gap-6 rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm ring-1 ring-slate-900/5 transition-all hover:ring-subgreen-200 md:p-8 dark:border-slate-600 dark:bg-slate-800 dark:ring-slate-700 dark:hover:ring-subgreen-500/50">
                <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-2xl bg-subgreen-100 text-subgreen-600 transition-transform group-hover:scale-110 dark:bg-subgreen-900/50 dark:text-subgreen-300">
                    <span class="text-xl font-extrabold">2</span>
                </div>
                <div>
                    <span class="text-sm font-bold tracking-wider text-subgreen-600 uppercase dark:text-subgreen-400">Step 2</span>
                    <h3 class="mt-2 text-xl font-bold text-slate-900 dark:text-slate-100">Configure attendance mode</h3>
                    <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">QR, Biometric, or Hybrid.</p>
                </div>
            </div>
            <div data-reveal class="card-hover group flex gap-6 rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm ring-1 ring-slate-900/5 transition-all hover:ring-subblue-200 md:p-8 dark:border-slate-600 dark:bg-slate-800 dark:ring-slate-700 dark:hover:ring-subblue-500/50">
                <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-2xl bg-subblue-100 text-subblue-600 transition-transform group-hover:scale-110 dark:bg-subblue-900/50 dark:text-subblue-300">
                    <span class="text-xl font-extrabold">3</span>
                </div>
                <div>
                    <span class="text-sm font-bold tracking-wider text-subblue-600 uppercase dark:text-subblue-400">Step 3</span>
                    <h3 class="mt-2 text-xl font-bold text-slate-900 dark:text-slate-100">Setup environment</h3>
                    <ul class="mt-2 space-y-1 text-sm text-slate-600 dark:text-slate-300">
                        <li>• Register stations</li>
                        <li>• Enroll employees</li>
                        <li>• Configure schedules & policies</li>
                    </ul>
                </div>
            </div>
            <div data-reveal class="card-hover group flex gap-6 rounded-2xl border border-slate-200/80 bg-white p-6 shadow-sm ring-1 ring-slate-900/5 transition-all hover:ring-subgreen-200 md:p-8 dark:border-slate-600 dark:bg-slate-800 dark:ring-slate-700 dark:hover:ring-subgreen-500/50">
                <div class="flex h-14 w-14 shrink-0 items-center justify-center rounded-2xl bg-subgreen-100 text-subgreen-600 transition-transform group-hover:scale-110 dark:bg-subgreen-900/50 dark:text-subgreen-300">
                    <span class="text-xl font-extrabold">4</span>
                </div>
                <div>
                    <span class="text-sm font-bold tracking-wider text-subgreen-600 uppercase dark:text-subgreen-400">Step 4</span>
                    <h3 class="mt-2 text-xl font-bold text-slate-900 dark:text-slate-100">Start tracking + export</h3>
                    <ul class="mt-2 space-y-1 text-sm text-slate-600 dark:text-slate-300">
                        <li>• Employees time-in/out</li>
                        <li>• Managers approve</li>
                        <li>• Payroll exports</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="bg-slate-50 py-16 dark:bg-slate-800/40">
    <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Ready to streamline attendance?</h2>
        <p class="mt-2 text-slate-600 dark:text-slate-300">Get a custom demo or start with a free trial.</p>
        <div class="mt-8 flex flex-wrap justify-center gap-4">
            <a asp-page="/Landing/Contact" class="btn-primary-glow rounded-xl bg-gradient-to-r from-subgreen-500 to-subgreen-600 px-8 py-3.5 text-sm font-bold text-white shadow-lg transition-all hover:-translate-y-0.5 dark:from-subgreen-500 dark:to-subgreen-600">Book a demo</a>
            <a asp-page="/Landing/Pricing" class="rounded-xl border-2 border-subblue-200 bg-white px-8 py-3.5 text-sm font-bold text-subblue-700 transition-all hover:bg-subblue-50 dark:border-subblue-600 dark:bg-slate-800 dark:text-subblue-300 dark:hover:bg-slate-700">View pricing</a>
        </div>
    </div>
</section>
