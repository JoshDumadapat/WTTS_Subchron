@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<!-- HERO SECTION – gradient + glows, symmetrical spacing, dashboard preview in window -->
<section class="relative flex flex-col items-center justify-center overflow-hidden
         bg-gradient-to-br from-white via-subblue-50/40 to-subgreen-50/50
         pt-20 pb-14 sm:pt-24 sm:pb-16 lg:pt-28 lg:pb-20
         dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">

    <!-- Enhanced background glows -->
    <div class="pointer-events-none absolute -top-32 left-1/4 -z-10 h-[600px]
        w-[600px] rounded-full bg-gradient-to-br from-subblue-200/50 to-subgreen-200/30
        blur-[140px] dark:from-subblue-600/20 dark:to-subgreen-600/10"></div>
    <div class="pointer-events-none absolute right-1/4 -bottom-32 -z-10 h-[600px]
        w-[600px] rounded-full bg-gradient-to-tl from-subgreen-200/50 to-subblue-200/30
        blur-[140px] dark:from-subgreen-600/20 dark:to-subblue-600/10"></div>

    <div class="relative z-10 mx-auto w-full max-w-4xl px-4 text-center sm:px-6 lg:px-8">

        <span class="inline-block rounded-full bg-subblue-100 px-6 py-1.5
    text-xs font-semibold tracking-wider text-subblue-600 uppercase
    dark:bg-subblue-900/60 dark:text-subblue-300">
            Workforce time tracking
        </span>

        <!-- Headline -->
        <h1 class="mt-4 bg-gradient-to-b from-slate-900 to-slate-700 bg-clip-text
            text-3xl font-bold tracking-tight text-transparent
            sm:mt-5 sm:text-4xl lg:text-5xl lg:leading-tight
            dark:from-slate-100 dark:to-slate-300">
            Personalize your HR software with smart time tracking
        </h1>

        <!-- Supporting paragraph -->
        <p class="mx-auto mt-4 max-w-2xl text-base leading-relaxed text-slate-600
            sm:mt-5 sm:text-lg dark:text-slate-300">
            Every organization is unique, and so are its requirements. Build flexible time-tracking
            workflows that adapt to schedules, policies, and real-world operations.
        </p>

        <!-- CTAs -->
        <div class="mt-6 flex flex-col items-center justify-center gap-3 sm:mt-8 sm:flex-row sm:flex-wrap">
            <a asp-page="/Landing/Signup"
               class="w-full rounded-lg bg-subgreen-600 px-5 py-2.5
       text-center text-sm font-semibold text-white shadow-md transition hover:scale-105
       hover:bg-subgreen-700 hover:shadow-lg
       sm:w-auto dark:bg-subgreen-500
       dark:hover:bg-subgreen-400">
                Sign up for free trial
            </a>

            <a asp-page="/Landing/Contact"
               class="w-full rounded-lg border-2 border-slate-300 bg-white px-5 py-2.5
       text-center text-sm font-semibold text-slate-800 transition hover:scale-105
       hover:border-subblue-300 hover:bg-subblue-50 hover:shadow-md
       sm:w-auto dark:border-slate-600 dark:bg-slate-800
       dark:text-slate-100 dark:hover:border-subblue-500
       dark:hover:bg-slate-700">
                Request demo
            </a>
        </div>

        <!-- Dashboard preview – image sized to fill window, symmetrical -->
        <div class="relative z-20 mt-8 w-full px-4 sm:mt-10 sm:px-6 lg:mt-12 lg:px-0">
            <div class="mx-auto w-full max-w-4xl">
                <div class="relative overflow-hidden rounded-xl border border-slate-200/80 bg-white
                    shadow-[0_25px_50px_-12px_rgba(0,0,0,0.12),0_0_0_1px_rgba(0,0,0,0.05)]
                    dark:border-slate-600 dark:bg-slate-800 dark:shadow-xl">

