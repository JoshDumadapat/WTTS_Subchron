@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutLogin";
}

<div class="w-full max-w-md">
    <!-- Logo -->
    <div class="flex justify-center">
        <a asp-page="/Index" class="inline-block">
            <img src="~/images/logo/logo.png" alt="Subchron" class="h-12 w-auto object-contain" />
        </a>
    </div>

    <h1 class="mt-8 text-center text-2xl font-bold text-slate-900 dark:text-white">
        Set a new password
    </h1>

    <p class="mt-2 text-center text-sm text-slate-600 dark:text-slate-400">
        Choose a strong password to secure your account.
    </p>

    <!-- Card -->
    <div class="mt-8 rounded-xl border border-slate-200 bg-white p-8 shadow-lg dark:border-slate-700 dark:bg-slate-800">
        <!-- FORM STATE -->
        <div id="rpFormState">
            <form id="resetPasswordForm" class="space-y-5" onsubmit="return rpHandleSubmit(event)">
                <!-- Hidden fields -->
                <input type="hidden" id="emailField" name="email" value="@Model.Email" />
                <input type="hidden" id="codeField" name="code" value="@Model.Code" />

                <!-- Email display (read-only) -->
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-200">
                        Email address
                    </label>
                    <input type="text"
                           readonly
                           value="@(string.IsNullOrWhiteSpace(Model.Email) ? "your@email.com" : Model.Email)"
                           class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600 outline-none
                                  dark:border-slate-700 dark:bg-slate-900 dark:text-slate-400" />
                </div>

                <!-- New password -->
                <div>
                    <label for="newPassword" class="block text-sm font-medium text-slate-700 dark:text-slate-200">
                        New password
                    </label>

                    <div class="relative">
                        <input id="newPassword"
                               name="newPassword"
                               type="password"
                               autocomplete="new-password"
                               required
                               placeholder="••••••••"
                               oninput="rpUpdateHints()"
                               onfocus="rpShowChecklist()"
                               class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-4 py-3 pe-12 text-sm text-slate-900 shadow-sm
                                      transition outline-none placeholder:text-slate-400
                                      focus:border-subgreen-500 focus:ring-2 focus:ring-subgreen-500/30
                                      dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100 dark:focus:border-subgreen-400
                                      dark:placeholder:text-slate-500 dark:focus:ring-subgreen-400/30" />

                        <button type="button"
                                onclick="togglePassword('newPassword','eyeNew','eyeSlashNew')"
                                style="position:absolute; right:12px; top:50%; transform: translateY(-30%); z-index: 20; display:flex; align-items:center; justify-content:center;"
                                class="cursor-pointer text-slate-400 hover:text-slate-600 focus:outline-none dark:text-slate-500 dark:hover:text-slate-300">
                            <svg id="eyeNew" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>

                            <svg id="eyeSlashNew" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="hidden h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                            </svg>
                        </button>
                    </div>

                    <!-- Password requirements checklist -->
                    <div id="pwChecklist"
                         class="mt-3 hidden rounded-lg border border-slate-200 bg-slate-50 p-4 dark:border-slate-700 dark:bg-slate-900/50">
                        <div class="mb-3 flex items-center justify-between">
                            <span class="text-xs font-semibold text-slate-700 dark:text-slate-200">Password requirements</span>
                            <button type="button"
                                    onclick="rpHideChecklist()"
                                    class="text-xs text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200">
                                Hide
                            </button>
                        </div>

                        <ul class="space-y-2 text-sm">
                            <li class="flex items-center gap-2">
                                <span id="hintLenIcon" class="flex-shrink-0"></span>
                                <span id="hintLenText" class="text-slate-600 dark:text-slate-300">At least 12 characters</span>
                            </li>
                            <li class="flex items-center gap-2">
                                <span id="hintUpperIcon" class="flex-shrink-0"></span>
                                <span id="hintUpperText" class="text-slate-600 dark:text-slate-300">One uppercase letter</span>
                            </li>
                            <li class="flex items-center gap-2">
                                <span id="hintLowerIcon" class="flex-shrink-0"></span>
                                <span id="hintLowerText" class="text-slate-600 dark:text-slate-300">One lowercase letter</span>
                            </li>
                            <li class="flex items-center gap-2">
                                <span id="hintNumIcon" class="flex-shrink-0"></span>
                                <span id="hintNumText" class="text-slate-600 dark:text-slate-300">One number</span>
                            </li>
                            <li class="flex items-center gap-2">
                                <span id="hintSymIcon" class="flex-shrink-0"></span>
                                <span id="hintSymText" class="text-slate-600 dark:text-slate-300">One special character</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Confirm password -->
                <div>
                    <label for="confirmPassword" class="block text-sm font-medium text-slate-700 dark:text-slate-200">
                        Confirm password
                    </label>

                    <div class="relative">
                        <input id="confirmPassword"
                               name="confirmPassword"
                               type="password"
                               autocomplete="new-password"
                               required
                               placeholder="••••••••"
                               oninput="rpUpdateHints()"
                               class="mt-2 w-full rounded-lg border border-slate-300 bg-white px-4 py-3 pe-12 text-sm text-slate-900 shadow-sm
                                      transition outline-none placeholder:text-slate-400
                                      focus:border-subgreen-500 focus:ring-2 focus:ring-subgreen-500/30
                                      dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100 dark:focus:border-subgreen-400
                                      dark:placeholder:text-slate-500 dark:focus:ring-subgreen-400/30" />

                        <button type="button"
                                onclick="togglePassword('confirmPassword','eyeConfirm','eyeSlashConfirm')"
                                style="position:absolute; right:12px; top:50%; transform: translateY(-30%); z-index: 20; display:flex; align-items:center; justify-content:center;"
                                class="cursor-pointer text-slate-400 hover:text-slate-600 focus:outline-none dark:text-slate-500 dark:hover:text-slate-300">
                            <svg id="eyeConfirm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>

                            <svg id="eyeSlashConfirm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="hidden h-5 w-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                            </svg>
                        </button>
                    </div>

                    <!-- Mismatch error -->
                    <p id="pwMismatch" class="mt-2 hidden text-xs font-medium" style="color: #dc2626;">
                        Passwords do not match.
                    </p>
                </div>

                <!-- reCAPTCHA -->
                <div class="mt-4 mb-2">
                    <div id="recaptcha-container"
                         class="g-recaptcha"
                         data-sitekey="@Model.RecaptchaSiteKey"
                         data-size="normal"
                         style="transform:scale(.9); transform-origin:0 0;">
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit"
                        id="submitBtn"
                        class="flex w-full items-center justify-center gap-2 rounded-lg bg-subgreen-500 py-3.5
                               text-sm font-semibold text-white shadow-md transition
                               hover:bg-subgreen-600
                               focus:ring-2 focus:ring-subgreen-500 focus:ring-offset-2 focus:outline-none
                               disabled:cursor-not-allowed disabled:opacity-60
                               dark:bg-subgreen-500 dark:hover:bg-subgreen-600
                               dark:focus:ring-subgreen-400 dark:focus:ring-offset-slate-900">
                    <svg id="submitSpinner"
                         aria-hidden="true"
                         class="hidden h-5 w-5 animate-spin fill-white text-white/30"
                         viewBox="0 0 100 101"
                         fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor" />
                        <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill" />
                    </svg>

                    <span id="submitText">Update password</span>
                </button>

                <!-- Error Message -->
                <div id="rpError" class="mt-4 flex hidden items-center rounded-md border border-red-200 bg-red-50 px-4 py-3">
                    <svg viewBox="0 0 24 24" class="mr-2.5 h-4 w-4 flex-shrink-0 text-red-600">
                        <path fill="currentColor"
                              d="M11.983,0a12.206,12.206,0,0,0-8.51,3.653A11.8,11.8,0,0,0,0,12.207,11.779,11.779,0,0,0,11.8,24h.214A12.111,12.111,0,0,0,24,11.791h0A11.766,11.766,0,0,0,11.983,0ZM10.5,16.542a1.476,1.476,0,0,1,1.449-1.53h.027a1.527,1.527,0,0,1,1.523,1.47,1.475,1.475,0,0,1-1.449,1.53h-.027A1.529,1.529,0,0,1,10.5,16.542ZM11,12.5v-6a1,1,0,0,1,2,0v6a1,1,0,1,1-2,0Z">
                        </path>
                    </svg>
                    <span class="text-xs text-red-700" id="rpErrorText"></span>
                </div>
            </form>
        </div>

        <!-- SUCCESS STATE -->
        <div id="rpSuccessState" class="hidden">
            <div class="flex items-start gap-3 rounded-lg border border-emerald-200 bg-emerald-50 p-4 dark:border-emerald-800 dark:bg-emerald-900/20">
                <div class="mt-0.5 flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-600 dark:text-emerald-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.707a1 1 0 00-1.414-1.414L9 10.172 7.707 8.879A1 1 0 106.293 10.293l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-emerald-800 dark:text-emerald-200">Password updated successfully</p>
                    <p class="mt-1 text-sm text-emerald-700 dark:text-emerald-300">
                        Your password has been changed. Redirecting you to sign in…
                    </p>
                </div>
            </div>

            <div class="mt-6">
                <a asp-page="/Auth/Login"
                   class="flex w-full items-center justify-center rounded-lg bg-subgreen-500 py-3.5
                          text-sm font-semibold text-white shadow-md transition
                          hover:bg-subgreen-600
                          dark:bg-subgreen-500 dark:hover:bg-subgreen-600">
                    Continue to sign in
                </a>
            </div>
        </div>

        <!-- EXPIRED/INVALID LINK STATE -->
        <div id="rpExpiredState" class="hidden">
            <div class="flex items-start gap-3 rounded-lg border border-red-200 bg-red-50 p-4 dark:border-red-800 dark:bg-red-900/20">
                <div class="mt-0.5 flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 dark:text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-red-800 dark:text-red-200">Reset link expired or invalid</p>
                    <p class="mt-1 text-sm text-red-700 dark:text-red-300">
                        This password reset link has expired or is invalid. Please request a new one.
                    </p>
                </div>
            </div>

            <div class="mt-6 space-y-3">
                <a asp-page="/Auth/ForgotPassword"
                   class="flex w-full items-center justify-center rounded-lg bg-subgreen-500 py-3.5
                          text-sm font-semibold text-white shadow-md transition
                          hover:bg-subgreen-600
                          dark:bg-subgreen-500 dark:hover:bg-subgreen-600">
                    Request new reset link
                </a>

                <a asp-page="/Auth/Login"
                   class="block w-full rounded-lg border border-slate-300 bg-white py-3 text-center
                          text-sm font-semibold text-slate-700 shadow-sm transition hover:bg-slate-50
                          dark:border-slate-600 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600">
                    Back to sign in
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}

<script>
    const apiBaseUrl = '@Model.ApiBaseUrl';

    // Configure redirect after success (ms)
    const SUCCESS_REDIRECT_DELAY = 1200; // 1.2s

    // Icons for password checklist
    const ICON_BULLET = `<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400" viewBox="0 0 20 20" fill="currentColor"><circle cx="10" cy="10" r="3"/></svg>`;
    const ICON_CHECK = `<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-emerald-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>`;

    function initIcons() {
        setReq('hintLen', false);
        setReq('hintUpper', false);
        setReq('hintLower', false);
        setReq('hintNum', false);
        setReq('hintSym', false);
    }

    function setReq(key, ok) {
        const icon = document.getElementById(key + 'Icon');
        const text = document.getElementById(key + 'Text');
        if (!icon || !text) return;

        if (ok) {
            icon.innerHTML = ICON_CHECK;
            text.className = 'text-emerald-600 dark:text-emerald-400 font-medium';
        } else {
            icon.innerHTML = ICON_BULLET;
            text.className = 'text-slate-600 dark:text-slate-300';
        }
    }

    function rpShowChecklist() {
        document.getElementById('pwChecklist')?.classList.remove('hidden');
    }

    function rpHideChecklist() {
        document.getElementById('pwChecklist')?.classList.add('hidden');
    }

    function rpUpdateHints() {
        const pw = document.getElementById('newPassword')?.value || '';
        const confirm = document.getElementById('confirmPassword')?.value || '';

        if (pw.length > 0) rpShowChecklist();

        setReq('hintLen', pw.length >= 12);
        setReq('hintUpper', /[A-Z]/.test(pw));
        setReq('hintLower', /[a-z]/.test(pw));
        setReq('hintNum', /[0-9]/.test(pw));
        setReq('hintSym', /[^A-Za-z0-9]/.test(pw));

        const mismatch = document.getElementById('pwMismatch');
        if (mismatch) {
            if (pw && confirm && pw !== confirm) {
                mismatch.classList.remove('hidden');
            } else {
                mismatch.classList.add('hidden');
            }
        }

        hideError();
    }

    function togglePassword(inputId, eyeId, eyeSlashId) {
        const input = document.getElementById(inputId);
        const eye = document.getElementById(eyeId);
        const eyeSlash = document.getElementById(eyeSlashId);
        if (!input || !eye || !eyeSlash) return;

        if (input.type === 'password') {
            input.type = 'text';
            eye.classList.add('hidden');
            eyeSlash.classList.remove('hidden');
        } else {
            input.type = 'password';
            eye.classList.remove('hidden');
            eyeSlash.classList.add('hidden');
        }
    }

    function showError(message) {
        const errorEl = document.getElementById('rpError');
        const errorText = document.getElementById('rpErrorText');
        errorText.textContent = message;
        errorEl.classList.remove('hidden');
    }

    function hideError() {
        const errorEl = document.getElementById('rpError');
        errorEl.classList.add('hidden');
    }

    function setLoading(loading) {
        const btn = document.getElementById('submitBtn');
        const spinner = document.getElementById('submitSpinner');
        const text = document.getElementById('submitText');

        btn.disabled = loading;

        if (loading) {
            spinner.classList.remove('hidden');
            text.textContent = 'Updating...';
        } else {
            spinner.classList.add('hidden');
            text.textContent = 'Update password';
        }
    }

    function validatePassword(pw) {
        return (
            pw.length >= 12 &&
            /[A-Z]/.test(pw) &&
            /[a-z]/.test(pw) &&
            /[0-9]/.test(pw) &&
            /[^A-Za-z0-9]/.test(pw)
        );
    }

    // Redirect helper (after success)
    function redirectToLoginAfterSuccess(delayMs = SUCCESS_REDIRECT_DELAY) {
        // Razor Pages route you used in markup
        const loginUrl = '/Auth/Login';

        window.setTimeout(() => {
            window.location.assign(loginUrl);
        }, delayMs);
    }

    async function rpHandleSubmit(e) {
        e.preventDefault();
        hideError();

        const email = document.getElementById('emailField').value;
        const code = document.getElementById('codeField').value;
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (!validatePassword(newPassword)) {
            rpShowChecklist();
            showError('Please meet all password requirements.');
            return false;
        }

        if (newPassword !== confirmPassword) {
            document.getElementById('pwMismatch')?.classList.remove('hidden');
            showError('Passwords do not match.');
            return false;
        }

        const recaptchaToken = grecaptcha.getResponse();
        if (!recaptchaToken) {
            showError('Please complete the CAPTCHA verification.');
            return false;
        }

        setLoading(true);

        try {
            const res = await fetch(`${apiBaseUrl}/api/auth/reset-password`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    email: email,
                    code: code,
                    newPassword: newPassword,
                    recaptchaToken: recaptchaToken
                })
            });

            const data = await res.json();

            if (!res.ok || !data.ok) {
                grecaptcha.reset();

                if (data.message?.toLowerCase().includes('expired') || data.message?.toLowerCase().includes('invalid')) {
                    document.getElementById('rpFormState').classList.add('hidden');
                    document.getElementById('rpExpiredState').classList.remove('hidden');
                    return false;
                }

                showError(data.message || 'Something went wrong. Please try again.');
                setLoading(false);
                return false;
            }

            // Success
            document.getElementById('rpFormState').classList.add('hidden');
            document.getElementById('rpSuccessState').classList.remove('hidden');

            // Redirect to login after success
            redirectToLoginAfterSuccess();

        } catch (error) {
            grecaptcha.reset();
            showError('Network error. Please check your connection and try again.');
            setLoading(false);
        }

        return false;
    }

    document.addEventListener('DOMContentLoaded', function () {
        initIcons();
    });
</script>
