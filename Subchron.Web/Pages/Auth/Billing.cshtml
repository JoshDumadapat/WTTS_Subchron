    <script>
        (function () {
            var input = document.getElementById('cardAddressLine1');
            var list = document.getElementById('addressSuggestions');
            if (!input || !list) return;
            var debounceTimer;
            var lastQuery = '';
            var abortController = null;
            var activeSuggestionIndex = -1;

            function setActiveSuggestion(index) {
                var options = list.querySelectorAll('button');
                if (!options.length) { activeSuggestionIndex = -1; return; }
                if (activeSuggestionIndex >= 0 && options[activeSuggestionIndex]) options[activeSuggestionIndex].classList.remove('bg-slate-100', 'dark:bg-slate-700');
                activeSuggestionIndex = index;
                if (activeSuggestionIndex >= 0 && options[activeSuggestionIndex]) {
                    options[activeSuggestionIndex].classList.add('bg-slate-100', 'dark:bg-slate-700');
                    options[activeSuggestionIndex].scrollIntoView({ block: 'nearest' });
                }
            }

            function fillAddress(item) {
                var line1El = document.getElementById('cardAddressLine1');
                var cityEl = document.getElementById('cardBillingCity');
                var provEl = document.getElementById('cardBillingProvince');
                var postalEl = document.getElementById('cardBillingPostal');
                var countryEl = document.getElementById('cardBillingCountry');
                if (line1El) line1El.value = item.addressLine || item.displayName || '';
                if (cityEl) cityEl.value = item.city || '';
                if (provEl) provEl.value = item.state || '';
                if (postalEl) postalEl.value = item.postalCode || '';
                if (countryEl) countryEl.value = item.country || 'Philippines';
                list.classList.add('hidden');
                list.innerHTML = '';
                activeSuggestionIndex = -1;
            }

            function showSuggestions(query) {
                if (!query || query.length < 3) {
                    list.classList.add('hidden');
                    list.innerHTML = '';
                    activeSuggestionIndex = -1;
                    return;
                }
                if (abortController) abortController.abort();
                abortController = new AbortController();
                fetch('/api/location/autocomplete?q=' + encodeURIComponent(query) + '&limit=6', { signal: abortController.signal })
                    .then(function (r) { return r.json(); })
                    .then(function (data) {
                        var items = Array.isArray(data) ? data : [];
                        list.innerHTML = '';
                        if (items.length === 0) {
                            list.classList.add('hidden');
                            return;
                        }
                        items.forEach(function (item, idx) {
                            var label = item.displayName || item.addressLine || 'Address';
                            var btn = document.createElement('button');
                            btn.type = 'button';
                            btn.className = 'block w-full cursor-pointer px-4 py-3 text-left text-sm text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-700';
                            btn.textContent = label;
                            btn.addEventListener('click', function () { fillAddress(item); });
                            btn.addEventListener('mouseenter', function () { setActiveSuggestion(idx); });
                            list.appendChild(btn);
                        });
                        list.classList.remove('hidden');
                        activeSuggestionIndex = -1;
                    })
                    .catch(function (err) {
                        if (err.name !== 'AbortError') list.classList.add('hidden');
                    });
            }

            input.addEventListener('input', function () {
                clearTimeout(debounceTimer);
                var q = input.value.trim();
                lastQuery = q;
                list.innerHTML = '';
                activeSuggestionIndex = -1;
                if (q.length < 3) { list.classList.add('hidden'); return; }
                debounceTimer = setTimeout(function () { showSuggestions(q); }, 320);
            });
            input.addEventListener('focus', function () {
                if (list.children.length > 0) list.classList.remove('hidden');
            });
            input.addEventListener('blur', function () {
                setTimeout(function () { list.classList.add('hidden'); }, 200);
            });
            input.addEventListener('keydown', function (e) {
                if (list.classList.contains('hidden')) return;
                var options = list.querySelectorAll('button');
                if (!options.length) return;
                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    setActiveSuggestion(activeSuggestionIndex < options.length - 1 ? activeSuggestionIndex + 1 : 0);
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    setActiveSuggestion(activeSuggestionIndex > 0 ? activeSuggestionIndex - 1 : options.length - 1);
                } else if (e.key === 'Enter' && activeSuggestionIndex >= 0 && options[activeSuggestionIndex]) {
                    e.preventDefault();
                    options[activeSuggestionIndex].click();
                } else if (e.key === 'Escape') {
                    list.classList.add('hidden');
                }
            });
            document.addEventListener('click', function (e) {
                if (!e.target.closest('.address-autocomplete')) list.classList.add('hidden');
            });
        })();
