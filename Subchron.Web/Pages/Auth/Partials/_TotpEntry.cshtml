@* Partial: TOTP Entry *@
<div id="totpEntry">
    <div class="text-center">
        <h2 class="text-lg font-bold text-slate-900 dark:text-white">Two-factor verification</h2>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">
            Enter the 6-digit code from your authenticator app.
        </p>
    </div>
    <form class="mt-6 space-y-5" onsubmit="return verifyTotp(event)">
        <div>
            <label for="totp" class="block text-sm font-medium text-slate-700 dark:text-slate-200">
                Verification code
            </label>
            <input id="totp" name="totp" inputmode="numeric" autocomplete="one-time-code"
                   maxlength="6" placeholder="123456" required
                   oninput="this.value=this.value.replace(/[^0-9]/g,'').slice(0,6)"
                   class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-4 py-3 text-center text-lg tracking-widest
                          text-slate-900 transition-colors outline-none
                          focus:border-subgreen-500 focus:ring-2 focus:ring-subgreen-500
                          dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100
                          dark:focus:border-subgreen-400 dark:focus:ring-subgreen-400" />
        </div>

        <button type="submit" id="totpVerifyBtn"
                class="flex w-full items-center justify-center gap-2 rounded-lg
                       bg-subgreen-500 py-3.5
                       text-center text-sm font-semibold text-white shadow-sm transition
                       hover:bg-subgreen-600
       disabled:opacity-70">
            <svg id="totpVerifySpinner" aria-hidden="true" class="hidden h-5 w-5 animate-spin fill-white text-white/30" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/><path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.7191 9.52689C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/></svg>
            <span id="totpVerifyBtnText">Verify &amp; continue</span>
        </button>

        <!-- Error Message -->
        <div id="totpError" class="hidden bg-red-50 px-4 py-3 rounded-md flex items-center border border-red-200">
            <svg viewBox="0 0 24 24" class="text-red-600 w-4 h-4 mr-2.5 flex-shrink-0">
                <path fill="currentColor"
                      d="M11.983,0a12.206,12.206,0,0,0-8.51,3.653A11.8,11.8,0,0,0,0,12.207,11.779,11.779,0,0,0,11.8,24h.214A12.111,12.111,0,0,0,24,11.791h0A11.766,11.766,0,0,0,11.983,0ZM10.5,16.542a1.476,1.476,0,0,1,1.449-1.53h.027a1.527,1.527,0,0,1,1.523,1.47,1.475,1.475,0,0,1-1.449,1.53h-.027A1.529,1.529,0,0,1,10.5,16.542ZM11,12.5v-6a1,1,0,0,1,2,0v6a1,1,0,1,1-2,0Z">
                </path>
            </svg>
            <span class="text-red-700 text-xs" id="totpErrorText"></span>
        </div>

        <div class="flex items-center justify-between text-sm">
            <button type="button"
                    onclick="backToLogin()"
                    class="font-medium text-slate-600 hover:text-slate-900
                           dark:text-slate-300 dark:hover:text-white">
                Back
            </button>

            <a href="#" onclick="openRecovery(); return false;"
               class="font-medium text-subgreen-600 hover:text-subgreen-700
                      dark:text-subgreen-400 dark:hover:text-subgreen-300">
                Canâ€™t access your authenticator?
            </a>
        </div>
    </form>
</div>
