    </div>

   <!-- Back to login -->
         <div class="text-center">
  <a asp-page="/Auth/Login"
     class="text-xs font-medium text-slate-600 hover:text-slate-400
     dark:text-slate-200 dark:hover:text-slate-400">
    Back to sign in
