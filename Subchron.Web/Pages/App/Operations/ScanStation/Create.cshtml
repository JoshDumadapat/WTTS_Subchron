@page
@model Subchron.Web.Pages.App.Operations.ScanStation.CreateModel
@{
    ViewData["Title"] = "Create Station";
    ViewData["PageTitle"] = "Create Station";
    Layout = "/Pages/App/Shared/_LayoutAdmin.cshtml";
}

<div class="mx-auto max-w-2xl">
    <div class="mb-6 flex items-center gap-3">
        <a asp-page="/App/Operations/ScanStation" class="rounded-lg p-2 text-slate-500 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-700">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </a>
        <div>
            <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Create Station</h2>
            <p class="text-sm text-slate-500 dark:text-slate-400">Configure a new scan station for attendance kiosks.</p>
        </div>
    </div>

    <form id="createStationForm" class="space-y-6 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
        <!-- Choose Site -->
        <div>
            <label for="site" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Choose Site</label>
            <select id="site" name="site" class="mt-1.5 block w-full rounded-xl border border-slate-300 bg-white px-4 py-2.5 text-slate-900 shadow-sm focus:border-subgreen-500 focus:ring-2 focus:ring-subgreen-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-100 dark:focus:border-subgreen-400">
                <option value="">Select a site</option>
                <option value="hq">HQ Building</option>
                <option value="warehouse">Warehouse A</option>
                <option value="branch2">Branch Office 2</option>
            </select>
        </div>

        <!-- Station Name -->
        <div>
            <label for="stationName" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Station Name</label>
            <input type="text" id="stationName" name="stationName" placeholder="e.g. Main Lobby Kiosk" required
                   class="mt-1.5 block w-full rounded-xl border border-slate-300 bg-white px-4 py-2.5 text-slate-900 placeholder-slate-400 shadow-sm focus:border-subgreen-500 focus:ring-2 focus:ring-subgreen-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-100 dark:placeholder-slate-500 dark:focus:border-subgreen-400" />
        </div>

        <!-- Toggles -->
        <div class="space-y-4 rounded-xl border border-slate-100 bg-slate-50/50 p-4 dark:border-slate-700 dark:bg-slate-800/50">
            <p class="text-sm font-medium text-slate-700 dark:text-slate-300">Attendance mode</p>
            <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600 dark:text-slate-400">QR Scan</span>
                <button type="button" id="toggleQr" role="switch" aria-checked="true" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent bg-subgreen-600 transition-colors focus:outline-none focus:ring-2 focus:ring-subgreen-500 focus:ring-offset-2 dark:bg-subgreen-500">
                    <span class="pointer-events-none inline-block h-5 w-5 translate-x-5 transform rounded-full bg-white shadow ring-0 transition duration-200" aria-hidden="true"></span>
                </button>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600 dark:text-slate-400">ID Entry (optional)</span>
                <button type="button" id="toggleId" role="switch" aria-checked="false" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent bg-slate-200 transition-colors focus:outline-none focus:ring-2 focus:ring-subgreen-500 focus:ring-offset-2 dark:bg-slate-600">
                    <span class="pointer-events-none inline-block h-5 w-5 translate-x-0 transform rounded-full bg-white shadow ring-0 transition duration-200" aria-hidden="true"></span>
                </button>
            </div>
        </div>

        <!-- Schedule (Optional) -->
        <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Schedule (optional)</label>
            <p class="mt-0.5 text-xs text-slate-500 dark:text-slate-400">When this station is available for scanning.</p>
            <div class="mt-3 space-y-2">
                <label class="flex cursor-pointer items-center gap-3 rounded-lg border border-slate-200 bg-white p-3 transition dark:border-slate-600 dark:bg-slate-700">
                    <input type="radio" name="schedule" value="always" checked class="h-4 w-4 border-slate-300 text-subgreen-600 focus:ring-subgreen-500 dark:border-slate-500" />
                    <span class="text-sm font-medium text-slate-700 dark:text-slate-200">Always Open</span>
                </label>
                <label class="flex cursor-pointer items-center gap-3 rounded-lg border border-slate-200 bg-white p-3 transition dark:border-slate-600 dark:bg-slate-700">
                    <input type="radio" name="schedule" value="scheduled" class="h-4 w-4 border-slate-300 text-subgreen-600 focus:ring-subgreen-500 dark:border-slate-500" />
                    <span class="text-sm font-medium text-slate-700 dark:text-slate-200">Scheduled</span>
                    <span class="text-xs text-slate-500 dark:text-slate-400">Set opening hours</span>
                </label>
                <label class="flex cursor-pointer items-center gap-3 rounded-lg border border-slate-200 bg-white p-3 transition dark:border-slate-600 dark:bg-slate-700">
                    <input type="radio" name="schedule" value="manual" class="h-4 w-4 border-slate-300 text-subgreen-600 focus:ring-subgreen-500 dark:border-slate-500" />
                    <span class="text-sm font-medium text-slate-700 dark:text-slate-200">Manual</span>
                    <span class="text-xs text-slate-500 dark:text-slate-400">Enable/disable from admin</span>
                </label>
            </div>
        </div>

        <div class="flex gap-3 pt-2">
            <a asp-page="/App/Operations/ScanStation" class="flex-1 rounded-xl border border-slate-300 bg-white px-4 py-2.5 text-center text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600">
                Cancel
            </a>
            <button type="submit" class="flex-1 rounded-xl bg-subgreen-600 px-4 py-2.5 text-sm font-semibold text-white shadow-lg shadow-subgreen-500/20 hover:bg-subgreen-500 dark:bg-subgreen-500 dark:hover:bg-subgreen-400">
                Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
<script>
(function () {
    function toggleSwitch(btn) {
        const on = btn.getAttribute('aria-checked') === 'true';
        btn.setAttribute('aria-checked', !on);
        const thumb = btn.querySelector('span');
        if (thumb) {
            if (!on) {
                btn.classList.remove('bg-slate-200', 'dark:bg-slate-600');
                btn.classList.add('bg-subgreen-600', 'dark:bg-subgreen-500');
                thumb.classList.remove('translate-x-0');
                thumb.classList.add('translate-x-5');
            } else {
                btn.classList.add('bg-slate-200', 'dark:bg-slate-600');
                btn.classList.remove('bg-subgreen-600', 'dark:bg-subgreen-500');
                thumb.classList.add('translate-x-0');
                thumb.classList.remove('translate-x-5');
            }
        }
    }
    document.getElementById('toggleQr')?.addEventListener('click', function () { toggleSwitch(this); });
    document.getElementById('toggleId')?.addEventListener('click', function () { toggleSwitch(this); });

    document.getElementById('createStationForm')?.addEventListener('submit', function (e) {
        e.preventDefault();
        window.location.href = '/App/Operations/ScanStation/Details?id=' + encodeURIComponent('demo-1');
    });
})();
</script>
}
