@page
@model Subchron.Web.Pages.App.Operations.OvertimeRequests.DetailsModel
@{
    ViewData["Title"] = "Overtime Request Details";
    ViewData["PageTitle"] = "Overtime Request Details";
    Layout = "/Pages/App/Shared/_LayoutAdmin.cshtml";
    var id = Model.RequestId;
    var employee = id == "1" ? "Tim Jones" : id == "2" ? "Jane Smith" : "Alex Reyes";
    var date = id == "1" ? "Feb 22, 2025" : id == "2" ? "Feb 21, 2025" : "Feb 20, 2025";
    var start = id == "1" ? "18:00" : id == "2" ? "17:00" : "19:00";
    var end = id == "1" ? "21:00" : id == "2" ? "20:00" : "22:00";
    var reason = id == "1" ? "Project deadline" : id == "2" ? "Inventory count" : "Deployment support";
    var status = id == "3" ? "Approved" : "Pending";
    var reviewerComment = id == "3" ? "Approved for payroll." : "";
}

<div class="mx-auto max-w-2xl">
    <div class="mb-6 flex items-center gap-3">
        <a asp-page="/App/Operations/OvertimeRequests" class="rounded-lg p-2 text-slate-500 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-700">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </a>
        <div>
            <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Request #@id</h2>
            <p class="text-sm text-slate-500 dark:text-slate-400">@employee · @status</p>
        </div>
    </div>

    <div class="space-y-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
            <dl class="grid gap-4">
                <div>
                    <dt class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400">Employee</dt>
                    <dd class="mt-1 flex items-center gap-3">
                        <img src="https://ui-avatars.com/api/?name=@(Uri.EscapeDataString(employee))&background=209030&color=fff" class="h-10 w-10 rounded-full object-cover ring-2 ring-white dark:ring-slate-800" alt="" />
                        <span class="font-semibold text-slate-900 dark:text-white">@employee</span>
                    </dd>
                </div>
                <div>
                    <dt class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400">Date</dt>
                    <dd class="mt-1 text-sm text-slate-700 dark:text-slate-300">@date</dd>
                </div>
                <div>
                    <dt class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400">Start time – End time</dt>
                    <dd class="mt-1 text-sm tabular-nums text-slate-700 dark:text-slate-300">@start – @end</dd>
                </div>
                <div>
                    <dt class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400">Reason</dt>
                    <dd class="mt-1 text-sm text-slate-700 dark:text-slate-300">@reason</dd>
                </div>
                <div>
                    <dt class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400">Status</dt>
                    <dd class="mt-1">
                        @if (status == "Pending")
                        {
                            <span class="inline-flex items-center rounded-full bg-amber-50 px-2.5 py-0.5 text-xs font-medium text-amber-700 dark:bg-amber-900/30 dark:text-amber-300">Pending</span>
                        }
                        else if (status == "Approved")
                        {
                            <span class="inline-flex items-center rounded-full bg-subgreen-50 px-2.5 py-0.5 text-xs font-medium text-subgreen-700 dark:bg-subgreen-900/30 dark:text-subgreen-300">Approved</span>
                        }
                        else
                        {
                            <span class="inline-flex items-center rounded-full bg-red-50 px-2.5 py-0.5 text-xs font-medium text-red-700 dark:bg-red-900/30 dark:text-red-300">Rejected</span>
                        }
                    </dd>
                </div>
                @if (!string.IsNullOrEmpty(reviewerComment))
                {
                    <div>
                        <dt class="text-xs font-medium uppercase tracking-wider text-slate-500 dark:text-slate-400">Reviewer comment</dt>
                        <dd class="mt-1 text-sm text-slate-700 dark:text-slate-300">@reviewerComment</dd>
                    </div>
                }
            </dl>
        </div>

        @if (status == "Pending")
        {
            <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
                <h3 class="text-sm font-semibold text-slate-800 dark:text-slate-200">Approve or reject</h3>
                <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">Add an optional comment. The employee will be notified in-app.</p>
                <textarea id="reviewComment" rows="3" placeholder="Optional comment for the employee…" class="mt-3 w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-900 placeholder-slate-400 focus:border-subgreen-500 focus:ring-2 focus:ring-subgreen-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-100 dark:placeholder-slate-500"></textarea>
                <div class="mt-4 flex gap-3">
                    <button type="button" id="btnApprove" class="btn-primary flex-1">Approve</button>
                    <button type="button" id="btnReject" class="flex-1 rounded-xl border border-red-300 bg-red-50 px-4 py-2.5 text-sm font-semibold text-red-700 hover:bg-red-100 dark:border-red-800 dark:bg-red-900/30 dark:text-red-300 dark:hover:bg-red-900/50">Reject</button>
                </div>
                <p class="mt-3 text-xs text-slate-500 dark:text-slate-400">Employee will be notified in-app after you submit.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
<script>
(function () {
    var comment = document.getElementById('reviewComment');
    document.getElementById('btnApprove')?.addEventListener('click', function () {
        alert('Request approved. Employee notified in-app. (Backend not connected.)');
        window.location.href = '/App/Operations/OvertimeRequests';
    });
    document.getElementById('btnReject')?.addEventListener('click', function () {
        alert('Request rejected. Employee notified in-app. (Backend not connected.)');
        window.location.href = '/App/Operations/OvertimeRequests';
    });
})();
</script>
}
