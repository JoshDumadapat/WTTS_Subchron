          function closeMenu() {
            menu.classList.add("hidden");
            btn.setAttribute("aria-expanded", "false");
          }

          btn.addEventListener("click", (e) => {
            e.preventDefault();
            e.stopPropagation();
            const isOpen = !menu.classList.contains("hidden");
            if (isOpen) closeMenu();
            else openMenu();
          });

          // Close when clicking outside
          document.addEventListener("click", (e) => {
            if (!wrap.contains(e.target)) closeMenu();
          });

          // Close on ESC
          document.addEventListener("keydown", (e) => {
            if (e.key === "Escape") closeMenu();
          });
        })();

        (function () {
          const notifBtn = document.getElementById("notificationBtn");
          const notifWrap = document.getElementById("notificationWrap");
          const notifDropdown = document.getElementById("notificationDropdown");
          const notifList = document.getElementById("notificationList");
          const notifBadge = document.getElementById("notificationBadge");
          const markAllReadBtn = document.getElementById("markAllReadBtn");
          const filters = document.querySelectorAll(".notification-filter");

          function updateBadge() {
            const items = notifList?.querySelectorAll(".notification-item[data-read=\"false\"]") || [];
            if (notifBadge) notifBadge.style.display = items.length ? "block" : "none";
          }

          function setFilter(filter) {
            filters?.forEach(function (f) {
              var isActive = f.getAttribute("data-filter") === filter;
              f.classList.toggle("bg-subgreen-100", isActive);
              f.classList.toggle("text-subgreen-700", isActive);
              f.classList.toggle("dark:bg-subgreen-900/30", isActive);
              f.classList.toggle("dark:text-subgreen-300", isActive);
            });
            notifList?.querySelectorAll(".notification-item").forEach(function (el) {
              var read = el.getAttribute("data-read") === "true";
              var show = filter === "all" || (filter === "unread" && !read) || (filter === "read" && read);
              el.style.display = show ? "block" : "none";
            });
          }

          notifBtn?.addEventListener("click", function (e) {
            e.stopPropagation();
            notifDropdown?.classList.toggle("hidden");
            notifBtn?.setAttribute("aria-expanded", notifDropdown?.classList.contains("hidden") ? "false" : "true");
          });

          document.addEventListener("click", function (e) {
            if (notifWrap && !notifWrap.contains(e.target)) notifDropdown?.classList.add("hidden");
          });

          filters?.forEach(function (btn) {
            btn.addEventListener("click", function () { setFilter(btn.getAttribute("data-filter") || "all"); });
          });
          setFilter("all");

          markAllReadBtn?.addEventListener("click", function () {
            notifList?.querySelectorAll(".notification-item").forEach(function (el) {
              el.setAttribute("data-read", "true");
              var t = el.querySelector(".notif-title");
              if (t) { t.classList.remove("text-slate-900", "dark:text-white"); t.classList.add("text-slate-600", "dark:text-slate-300"); }
            });
            updateBadge();
            if (notifBadge) notifBadge.style.display = "none";
          });

          notifList?.querySelectorAll(".notification-item").forEach(function (el) {
            el.addEventListener("click", function () {
              el.setAttribute("data-read", "true");
              var t = el.querySelector(".notif-title");
              if (t) { t.classList.remove("text-slate-900", "dark:text-white"); t.classList.add("text-slate-600", "dark:text-slate-300"); }
              updateBadge();
            });
          });
          updateBadge();
        })();

        (function () {
          const html = document.documentElement;
          const btn = document.getElementById("themeToggle");
          const icon = document.getElementById("themeIcon");

          function setIcon() {
            const isDark = html.classList.contains("dark");
            icon.innerHTML = isDark
              ? `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.75 9.75 0 1021.752 15.002z" /></svg>`
              : `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>`;
          }

          setIcon();

          btn?.addEventListener("click", () => {
            html.classList.toggle("dark");
            localStorage.setItem("subchron-theme", html.classList.contains("dark") ? "dark" : "light");
            setIcon();
          });

          // Show loading overlay when navigating (full-page visit so URL updates)
          (function () {
            var overlay = document.getElementById("turbo-loading-overlay");
            function showOverlay() {
              if (overlay) {
                overlay.style.display = "flex";
                overlay.classList.remove("hidden");
              }
            }
            function hideOverlay() {
              if (overlay) {
                overlay.style.display = "none";
                overlay.classList.add("hidden");
              }
            }
            document.addEventListener("turbo:before-visit", showOverlay);
            document.addEventListener("turbo:load", hideOverlay);
            document.addEventListener("turbo:render", hideOverlay);
            document.addEventListener("turbo:fetch-request-error", hideOverlay);
          })();

          window.toggleSubmenu = function (id, btnEl) {
            const submenu = document.getElementById(id);
            const iconEl = btnEl?.querySelector(".sidebar-dropdown-icon");
            const isOpen = submenu?.classList.contains("open");

            submenu?.classList.toggle("open", !isOpen);
            if (iconEl) iconEl.style.transform = !isOpen ? "rotate(180deg)" : "rotate(0deg)";
          };

          const htmlRoot = document.getElementById("htmlRoot");
          const sidebarToggle = document.getElementById("sidebarToggle");
          const overlay = document.getElementById("sidebarOverlay");
          const mobileOpenBtn = document.getElementById("mobileSidebarOpen");

          function openMobileSidebar() {
            htmlRoot?.classList.remove("sidebar-collapsed");
            htmlRoot?.classList.add("sidebar-mobile-open");
            overlay?.classList.remove("hidden");
          }

          function closeMobileSidebar() {
            htmlRoot?.classList.remove("sidebar-mobile-open");
            overlay?.classList.add("hidden");
          }

          mobileOpenBtn?.addEventListener("click", openMobileSidebar);

          sidebarToggle?.addEventListener("click", () => {
            const isMobile = window.matchMedia("(max-width: 767px)").matches;
            if (isMobile) return closeMobileSidebar();

            htmlRoot?.classList.toggle("sidebar-collapsed");

            if (htmlRoot?.classList.contains("sidebar-collapsed")) {
              document.querySelectorAll(".submenu").forEach((el) => el.classList.remove("open"));
              document.querySelectorAll(".sidebar-dropdown-icon").forEach((el) => (el.style.transform = "rotate(0deg)"));
            }
          });

          overlay?.addEventListener("click", closeMobileSidebar);

          window.addEventListener("resize", () => {
            const isDesktop = window.matchMedia("(min-width: 768px)").matches;
            if (isDesktop) closeMobileSidebar();
          });

          // ========= FIX: active indicator transfers + persists across navigation =========
          (function setupSidebarActiveTransfer() {
            const sidebarNav = document.querySelector("#sidebar nav");
            if (!sidebarNav) return;

            function clearActive() {
              sidebarNav.querySelectorAll(".nav-item.active").forEach((el) => el.classList.remove("active"));
            }

            function setActive(el) {
              if (!el) return;
              clearActive();
              el.classList.add("active");
            }

            // Click delegation: only for <a.nav-item ...> so buttons (submenu toggles) are untouched.
            sidebarNav.addEventListener("click", (e) => {
              const link = e.target?.closest("a.nav-item");
              if (!link || !sidebarNav.contains(link)) return;

              // Persist last clicked (so Dashboard hard-coded active won't override after reload)
              try {
                localStorage.setItem("subchron-active-href", link.getAttribute("href") || "");
              } catch (_) { /* no-op */ }

              setActive(link);

              // If a submenu link is clicked, keep its submenu open and rotate its parent icon (visual consistency).
              const submenu = link.closest(".submenu");
              if (submenu && !submenu.classList.contains("open")) {
                submenu.classList.add("open");
                const container = submenu.closest("div");
                const toggleBtn = container?.querySelector('button.nav-item[onclick*="toggleSubmenu"]');
                const iconEl = toggleBtn?.querySelector(".sidebar-dropdown-icon");
                if (iconEl) iconEl.style.transform = "rotate(180deg)";
              }

              // On mobile, close sidebar after selecting a link (optional UX; does not affect indicator logic)
              const isMobile = window.matchMedia("(max-width: 767px)").matches;
              if (isMobile) closeMobileSidebar();
            });

            // On load: URL match first, else restore last clicked from localStorage.
            try {
              const path = window.location.pathname || "";
              const links = Array.from(sidebarNav.querySelectorAll("a.nav-item[href]"));

              const byUrl = links
                .filter(a => {
                  const href = a.getAttribute("href") || "";
                  if (!href || href === "#") return false;
                  return path === href || (href.length > 1 && path.startsWith(href));
                })
                .sort((a, b) => (b.getAttribute("href") || "").length - (a.getAttribute("href") || "").length);

              if (byUrl.length) {
                setActive(byUrl[0]);
              } else {
                const lastHref = localStorage.getItem("subchron-active-href");
                if (lastHref) {
                  const saved = links.find(a => (a.getAttribute("href") || "") === lastHref);
                  if (saved) setActive(saved);
                }
              }

              // Ensure: if the active item is inside a submenu, keep that submenu open.
              const activeLink = sidebarNav.querySelector("a.nav-item.active");
              const submenu = activeLink?.closest(".submenu");
              if (submenu && !submenu.classList.contains("open")) {
                submenu.classList.add("open");
                const container = submenu.closest("div");
                const toggleBtn = container?.querySelector('button.nav-item[onclick*="toggleSubmenu"]');
                const iconEl = toggleBtn?.querySelector(".sidebar-dropdown-icon");
                if (iconEl) iconEl.style.transform = "rotate(180deg)";
              }
            } catch (_) { /* no-op */ }
          })();
          // ========= END FIX =========
        })();

        (function () {
          const logoutBtn = document.getElementById("logoutBtn");
          const logoutModal = document.getElementById("logoutModal");
          const cancelBtn = document.getElementById("cancelLogout");
          const confirmBtn = document.getElementById("confirmLogout");

          function showModal() {
            if (!logoutModal) return;
            logoutModal.classList.remove("hidden");
            logoutModal.classList.add("flex");
            cancelBtn?.focus();
            document.addEventListener("keydown", onKeyDown);
          }

          function hideModal() {
            if (!logoutModal) return;
            logoutModal.classList.add("hidden");
            logoutModal.classList.remove("flex");
            document.removeEventListener("keydown", onKeyDown);
          }

          function onKeyDown(e) {
            if (e.key === "Escape") hideModal();
          }

          logoutBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            showModal();
          });

          cancelBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            hideModal();
          });

          confirmBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            // navigate to the server logout handler that redirects to login
            window.location.href = "/Auth/Logout";
          });

          logoutModal?.addEventListener("click", (e) => {
            if (e.target === logoutModal) hideModal();
          });
        })();
    </script>
