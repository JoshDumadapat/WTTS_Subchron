@using System.Security.Claims
@using Subchron.Web.Rbac
@using System.Net.Http.Headers
@using System.Net.Http.Json
@using Subchron.Web.Pages.Auth
@inject IHttpClientFactory Http

@functions {
    private sealed class ProfileResponse
    {
        public string? Name { get; set; }
        public string? AvatarUrl { get; set; }
    }
}

@{
    // Basic claim values
    var displayName = User.FindFirst(ClaimTypes.Name)?.Value ?? User.Identity?.Name ?? "User";
    var roleClaim = User.FindFirst(ClaimTypes.Role)?.Value ?? User.FindFirst("role")?.Value ?? "";
    var roleDisplay = string.IsNullOrEmpty(roleClaim)
        ? ""
        : System.Text.RegularExpressions.Regex.Replace(roleClaim, "([a-z])([A-Z])", "$1 $2").Trim();

    // Load avatar from API
    string? avatarUrl = null;
    var token = User.FindFirst(CompleteLoginModel.AccessTokenClaimType)?.Value;

    if (!string.IsNullOrEmpty(token))
    {
        try
        {
            var client = Http.CreateClient("Subchron.API");
            client.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

            var resp = await client.GetAsync("api/auth/profile");
            if (resp.IsSuccessStatusCode)
            {
                var data = await resp.Content.ReadFromJsonAsync<ProfileResponse>();
                if (data != null)
                {
                    if (!string.IsNullOrWhiteSpace(data.Name)) displayName = data.Name!;
                    avatarUrl = data.AvatarUrl;
                }
            }
        }
        catch { /* ignore */ }
    }

    var v = DateTimeOffset.UtcNow.ToUnixTimeMilliseconds();
}
