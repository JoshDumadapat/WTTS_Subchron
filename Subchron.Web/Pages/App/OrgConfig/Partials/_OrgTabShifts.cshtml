<script>
    function toggleDay(btn) {
        const isActive = btn.getAttribute('data-active') === 'true';
        if (isActive) {
            btn.setAttribute('data-active', 'false');
            btn.className = "day-btn group relative flex h-12 w-12 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-sm font-bold text-gray-400 transition-all hover:border-emerald-300 hover:text-emerald-500 hover:shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-1 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-500";
        } else {
            btn.setAttribute('data-active', 'true');
            btn.className = "day-btn group relative flex h-12 w-12 items-center justify-center rounded-lg bg-emerald-500 text-sm font-bold text-white shadow-md shadow-emerald-200 transition-all hover:-translate-y-0.5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:shadow-none dark:focus:ring-offset-gray-800";
        }
    }

    function toggleShiftType(type) {
        const card = document.getElementById(`card-${type}`);
        const check = document.getElementById(`check-${type}`);
        const inputs = document.getElementById(`inputs-${type}`);
        const titleText = card.querySelector('span.font-bold');

        // Check if currently active by checking border class
        const isActive = card.classList.contains('border-emerald-500');

        if (isActive) {
            // Deactivate
            card.className = "cursor-pointer rounded-xl border-2 border-transparent bg-gray-50 p-4 transition-all hover:border-gray-300 hover:shadow-md dark:bg-gray-700/50";
            titleText.classList.remove('text-gray-900', 'dark:text-white');
            titleText.classList.add('text-gray-500', 'dark:text-gray-300');
            check.classList.add('hidden');
            check.classList.remove('flex');
            inputs.classList.add('hidden');
        } else {
            // Activate
            card.className = "cursor-pointer rounded-xl border-2 border-emerald-500 bg-emerald-50 p-4 transition-all hover:shadow-md dark:border-emerald-500 dark:bg-emerald-900/20";
            titleText.classList.remove('text-gray-500', 'dark:text-gray-300');
            titleText.classList.add('text-gray-900', 'dark:text-white');
            check.classList.remove('hidden');
            check.classList.add('flex');
            inputs.classList.remove('hidden');
        }
    }
</script>       