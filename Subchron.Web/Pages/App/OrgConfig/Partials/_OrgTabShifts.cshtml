<script>
    const shiftTypeHints = {
        fixed:    'Fixed: strict start and end times each shift.',
        flexible: 'Flexible: employee picks when to start within an allowed window.',
        open:     'Open: no time window - just total hours required per week.'
    };

    const typeLabels = { fixed: 'Fixed', flexible: 'Flexible', open: 'Open' };
    const typeBadgeColors = {
        fixed:    'bg-emerald-50 text-emerald-700 ring-1 ring-emerald-600/20 dark:bg-emerald-900/30 dark:text-emerald-400 dark:ring-emerald-500/30',
        flexible: 'bg-blue-50 text-blue-700 ring-1 ring-blue-600/20 dark:bg-blue-900/30 dark:text-blue-400 dark:ring-blue-500/30',
        open:     'bg-violet-50 text-violet-700 ring-1 ring-violet-600/20 dark:bg-violet-900/30 dark:text-violet-400 dark:ring-violet-500/30'
    };
    const typeIconColors = {
        fixed:    'bg-emerald-100 text-emerald-600 dark:bg-emerald-900/40 dark:text-emerald-400',
        flexible: 'bg-blue-100 text-blue-600 dark:bg-blue-900/40 dark:text-blue-400',
        open:     'bg-violet-100 text-violet-600 dark:bg-violet-900/40 dark:text-violet-400'
    };

    function openAddShiftModal() {
        const modal = document.getElementById('addShiftModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }

    function closeAddShiftModal() {
        const modal = document.getElementById('addShiftModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }

    function onShiftTypeChange(type) {
        ['fixed', 'flexible', 'open'].forEach(t => {
            document.getElementById('fields-' + t).classList.add('hidden');
        });
        document.getElementById('fields-' + type).classList.remove('hidden');
        document.getElementById('shiftTypeHint').textContent = shiftTypeHints[type];
    }

    function toggleModalDay(btn) {
        const isActive = btn.getAttribute('data-active') === 'true';
        if (isActive) {
            btn.setAttribute('data-active', 'false');
            btn.className = 'modal-day-btn flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-xs font-bold text-gray-400 transition-all hover:border-emerald-300 hover:text-emerald-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-500';
        } else {
            btn.setAttribute('data-active', 'true');
            btn.className = 'modal-day-btn flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-500 text-xs font-bold text-white shadow-sm transition-all';
        }
    }

    function saveShiftTemplate() {
        const name = document.getElementById('shiftName').value.trim();
        if (!name) { document.getElementById('shiftName').focus(); return; }
        const type = document.querySelector('input[name="shift_type"]:checked').value;

        // Collect active work days
        const dayBtns = document.querySelectorAll('.modal-day-btn');
        const dayNames = ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'];
        const activeDays = [];
        dayBtns.forEach((btn, i) => { if (btn.getAttribute('data-active') === 'true') activeDays.push(dayNames[i]); });
        const daysLabel = activeDays.length === 7 ? 'Every day' :
                          activeDays.length === 0 ? 'No days set' :
                          activeDays.join(', ');

        // Collect type-specific details
        let detailCells = '';
        const accentColor = { fixed: 'emerald', flexible: 'blue', open: 'violet' }[type];

        if (type === 'fixed') {
            const startEl = document.querySelector('#fields-fixed input[type="time"]:nth-of-type(1)') ||
                            document.querySelector('#fields-fixed input[type="time"]');
            const inputs   = document.querySelectorAll('#fields-fixed input[type="time"]');
            const start    = inputs[0] ? formatTime(inputs[0].value) : '—';
            const end      = inputs[1] ? formatTime(inputs[1].value) : '—';
            const numInputs = document.querySelectorAll('#fields-fixed input[type="number"]');
            const brk      = numInputs[0] ? numInputs[0].value + ' min' : '—';
            const grace    = numInputs[1] ? numInputs[1].value + ' min' : '—';
            detailCells = `
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Time</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${start} – ${end}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Work Days</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${daysLabel}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Break</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${brk}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Grace Period</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${grace}</p></div>`;
        } else if (type === 'flexible') {
            const timeInputs = document.querySelectorAll('#fields-flexible input[type="time"]');
            const earliest   = timeInputs[0] ? formatTime(timeInputs[0].value) : '—';
            const latest     = timeInputs[1] ? formatTime(timeInputs[1].value) : '—';
            const numInputs  = document.querySelectorAll('#fields-flexible input[type="number"]');
            const reqHrs     = numInputs[0] ? numInputs[0].value + ' hrs' : '—';
            const maxHrs     = numInputs[1] ? numInputs[1].value + ' hrs' : '—';
            detailCells = `
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Window</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${earliest} – ${latest}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Work Days</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${daysLabel}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Required Daily</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${reqHrs}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Max Daily</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${maxHrs}</p></div>`;
        } else {
            const weekHrs = document.querySelector('#fields-open input[type="number"]');
            const hrs     = weekHrs ? weekHrs.value + ' hrs' : '—';
            detailCells = `
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Schedule</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">No strict window</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Work Days</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${daysLabel}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Required Weekly</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${hrs}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Basis</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">Hours only</p></div>`;
        }

        const borderColor = { fixed: 'border-emerald-200 dark:border-emerald-800/60', flexible: 'border-blue-200 dark:border-blue-800/60', open: 'border-violet-200 dark:border-violet-800/60' }[type];
        const accentBar   = { fixed: 'bg-emerald-500', flexible: 'bg-blue-500', open: 'bg-violet-500' }[type];
        const detailBg    = { fixed: 'bg-emerald-50/70 dark:bg-emerald-900/10', flexible: 'bg-blue-50/70 dark:bg-blue-900/10', open: 'bg-violet-50/70 dark:bg-violet-900/10' }[type];

        const iconSvg = {
            fixed:    '<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />',
            flexible: '<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15" />',
            open:     '<path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />'
        };
        const trashSvg = '<path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />';
        const editSvg  = '<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931z" />';

        const card = document.createElement('div');
        card.className = `shift-card overflow-hidden rounded-2xl border ${borderColor} bg-white shadow-sm dark:bg-gray-800`;
        card.innerHTML = `
            <div class="h-1.5 w-full ${accentBar}"></div>
            <div class="px-5 pt-4 pb-4">
                <div class="flex items-start justify-between gap-4">
                    <div class="flex items-center gap-3">
                        <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl ${typeIconColors[type]}">
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">${iconSvg[type]}</svg>
                        </div>
                        <div>
                            <span class="block text-sm font-bold text-gray-900 dark:text-white">${name}</span>
                            <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-semibold ${typeBadgeColors[type]}">${typeLabels[type]}</span>
                        </div>
                    </div>
                    <div class="flex shrink-0 items-center gap-1">
                        <button onclick="openEditShiftModal(this.closest('.shift-card'))" class="rounded-lg p-1.5 text-amber-400 hover:bg-amber-50 hover:text-amber-600 dark:text-amber-500 dark:hover:bg-amber-900/20 dark:hover:text-amber-400" title="Edit">
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">${editSvg}</svg>
                        </button>
                        <button onclick="openDeleteShiftModal(this.closest('.shift-card'))" class="rounded-lg p-1.5 text-red-400 hover:bg-red-50 hover:text-red-600 dark:text-red-500 dark:hover:bg-red-900/20 dark:hover:text-red-400" title="Delete">
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">${trashSvg}</svg>
                        </button>
                    </div>
                </div>
                <div class="mt-3 grid grid-cols-2 gap-x-4 gap-y-2 rounded-xl ${detailBg} px-4 py-3 sm:grid-cols-4">
                    ${detailCells}
                </div>
            </div>`;

        // Insert before the OT rules card (first non-shiftsList child of the container)
        const list = document.getElementById('shiftsList');
        list.appendChild(card);
        document.getElementById('shiftName').value = '';
        closeAddShiftModal();
    }

    function formatTime(val) {
        if (!val) return '—';
        const [h, m] = val.split(':').map(Number);
        const ampm = h >= 12 ? 'PM' : 'AM';
        const hour = h % 12 || 12;
        return `${hour}:${String(m).padStart(2, '0')} ${ampm}`;
    }

    // ── DELETE MODAL ──────────────────────────────────────────────
    let _cardToDelete = null;

    function openDeleteShiftModal(card) {
        _cardToDelete = card;
        const nameEl = card.querySelector('.text-sm.font-bold');
        document.getElementById('deleteShiftName').textContent = nameEl ? '"' + nameEl.textContent.trim() + '"' : 'this shift';
        document.querySelectorAll('input[name="deleteReason"]')[0].checked = true;
        const modal = document.getElementById('deleteShiftModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }

    function closeDeleteShiftModal() {
        _cardToDelete = null;
        const modal = document.getElementById('deleteShiftModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }

    function confirmDeleteShift() {
        if (_cardToDelete) {
            _cardToDelete.remove();
            _cardToDelete = null;
        }
        closeDeleteShiftModal();
    }

    // ── EDIT MODAL ────────────────────────────────────────────────
    let _cardToEdit = null;

    function openEditShiftModal(card) {
        _cardToEdit = card;

        // Read name from card
        const nameEl = card.querySelector('.text-sm.font-bold');
        document.getElementById('editShiftName').value = nameEl ? nameEl.textContent.trim() : '';

        // Detect type from badge text
        const badgeEl = card.querySelector('.inline-flex.items-center.rounded-full');
        const badgeText = badgeEl ? badgeEl.textContent.trim().toLowerCase() : 'fixed';
        const type = badgeText.includes('flex') ? 'flexible' : badgeText.includes('open') ? 'open' : 'fixed';

        // Set the radio
        const radio = document.querySelector(`input[name="edit_shift_type"][value="${type}"]`);
        if (radio) radio.checked = true;
        onEditShiftTypeChange(type);

        // Reset day buttons to Mon-Fri
        document.querySelectorAll('.edit-day-btn').forEach((btn, i) => {
            const active = i < 5;
            btn.setAttribute('data-active', active ? 'true' : 'false');
            if (active) {
                btn.className = 'edit-day-btn flex h-10 w-10 items-center justify-center rounded-lg bg-amber-400 text-xs font-bold text-white shadow-sm transition-all';
            } else {
                btn.className = 'edit-day-btn flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-xs font-bold text-gray-400 transition-all hover:border-amber-300 hover:text-amber-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-500';
            }
        });

        const modal = document.getElementById('editShiftModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }

    function closeEditShiftModal() {
        _cardToEdit = null;
        const modal = document.getElementById('editShiftModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }

    function onEditShiftTypeChange(type) {
        ['fixed', 'flexible', 'open'].forEach(t => {
            document.getElementById('edit-fields-' + t).classList.toggle('hidden', t !== type);
        });
        const hints = { fixed: 'Fixed: strict start and end times each shift.', flexible: 'Flexible: employees work within an allowed window.', open: 'Open: no strict window — hours tracked per day or week.' };
        document.getElementById('editShiftTypeHint').textContent = hints[type] || '';
    }

    function toggleEditDay(btn) {
        const active = btn.getAttribute('data-active') === 'true';
        btn.setAttribute('data-active', active ? 'false' : 'true');
        if (!active) {
            btn.className = 'edit-day-btn flex h-10 w-10 items-center justify-center rounded-lg bg-amber-400 text-xs font-bold text-white shadow-sm transition-all';
        } else {
            btn.className = 'edit-day-btn flex h-10 w-10 items-center justify-center rounded-lg border border-gray-200 bg-gray-50 text-xs font-bold text-gray-400 transition-all hover:border-amber-300 hover:text-amber-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-500';
        }
    }

    function saveEditShiftTemplate() {
        if (!_cardToEdit) return;

        const name = document.getElementById('editShiftName').value.trim();
        if (!name) { document.getElementById('editShiftName').focus(); return; }

        const type = document.querySelector('input[name="edit_shift_type"]:checked').value;

        // Update name in card
        const nameEl = _cardToEdit.querySelector('.text-sm.font-bold');
        if (nameEl) nameEl.textContent = name;

        // Rebuild detail grid
        const dayBtns = document.querySelectorAll('.edit-day-btn');
        const dayNames = ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'];
        const activeDays = [];
        dayBtns.forEach((btn, i) => { if (btn.getAttribute('data-active') === 'true') activeDays.push(dayNames[i]); });
        const daysLabel = activeDays.length === 7 ? 'Every day' : activeDays.length === 0 ? 'No days set' : activeDays.join(', ');

        const accentColor = { fixed: 'emerald', flexible: 'blue', open: 'violet' }[type];
        let detailCells = '';

        if (type === 'fixed') {
            const start = formatTime(document.getElementById('editFixedStart').value);
            const end   = formatTime(document.getElementById('editFixedEnd').value);
            const brk   = document.getElementById('editFixedBreak').value + ' min';
            const grace = document.getElementById('editFixedGrace').value + ' min';
            detailCells = `
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Time</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${start} – ${end}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Work Days</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${daysLabel}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Break</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${brk}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Grace Period</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${grace}</p></div>`;
        } else if (type === 'flexible') {
            const earliest = formatTime(document.getElementById('editFlexEarliest').value);
            const latest   = formatTime(document.getElementById('editFlexLatest').value);
            const reqHrs   = document.getElementById('editFlexReqHrs').value + ' hrs';
            const maxHrs   = document.getElementById('editFlexMaxHrs').value + ' hrs';
            detailCells = `
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Window</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${earliest} – ${latest}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Work Days</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${daysLabel}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Required Daily</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${reqHrs}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Max Daily</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${maxHrs}</p></div>`;
        } else {
            const hrs = document.getElementById('editOpenWeekHrs').value + ' hrs';
            detailCells = `
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Schedule</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">No strict window</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Work Days</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${daysLabel}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Required Weekly</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">${hrs}</p></div>
                <div><p class="text-[10px] font-semibold uppercase tracking-wider text-${accentColor}-600 dark:text-${accentColor}-500">Basis</p><p class="mt-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">Hours only</p></div>`;
        }

        // Update the detail grid in the card
        const grid = _cardToEdit.querySelector('.grid.grid-cols-2.gap-x-4');
        if (grid) grid.innerHTML = detailCells;

        closeEditShiftModal();
    }

    document.getElementById('addShiftModal').addEventListener('click', function(e) {
        if (e.target === this) closeAddShiftModal();
    });
    document.getElementById('deleteShiftModal').addEventListener('click', function(e) {
        if (e.target === this) closeDeleteShiftModal();
    });
    document.getElementById('editShiftModal').addEventListener('click', function(e) {
        if (e.target === this) closeEditShiftModal();
    });
</script>
