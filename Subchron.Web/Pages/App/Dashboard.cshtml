@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // --- Dashboard date shortcut helpers ---
        function dashFmt(d) {
            var y = d.getFullYear();
            var m = String(d.getMonth() + 1).padStart(2, '0');
            var day = String(d.getDate()).padStart(2, '0');
            return y + '-' + m + '-' + day;
        }
        function dashSetShortcut(type) {
            var today = new Date();
            var from, to;
            if (type === 'today') {
                from = to = new Date(today);
            } else if (type === 'yesterday') {
                from = to = new Date(today);
                from.setDate(today.getDate() - 1);
                to = new Date(from);
            } else if (type === 'week') {
                var day = today.getDay();
                var diff = today.getDate() - day + (day === 0 ? -6 : 1);
                from = new Date(today); from.setDate(diff);
                to = new Date(today);
            } else if (type === 'month') {
                from = new Date(today.getFullYear(), today.getMonth(), 1);
                to = new Date(today);
            } else if (type === 'year') {
                from = new Date(today.getFullYear(), 0, 1);
                to = new Date(today);
            }
            var fromEl = document.getElementById('dashFromDate');
            var toEl = document.getElementById('dashToDate');
            if (fromEl) fromEl.value = dashFmt(from);
            if (toEl) toEl.value = dashFmt(to);
            // Highlight active shortcut
            document.querySelectorAll('.dash-shortcut').forEach(function (btn) {
                btn.classList.remove('border-subgreen-500', 'bg-subgreen-50', 'text-subgreen-700', 'dark:border-subgreen-500', 'dark:bg-subgreen-900/20', 'dark:text-subgreen-400');
            });
            var active = document.getElementById('dashShortcut' + type.charAt(0).toUpperCase() + type.slice(1));
            if (active) active.classList.add('border-subgreen-500', 'bg-subgreen-50', 'text-subgreen-700', 'dark:border-subgreen-500', 'dark:bg-subgreen-900/20', 'dark:text-subgreen-400');
        }
        function dashReset() {
            var fromEl = document.getElementById('dashFromDate');
            var toEl = document.getElementById('dashToDate');
            var deptEl = document.getElementById('dashDeptFilter');
            if (fromEl) fromEl.value = '';
            if (toEl) toEl.value = '';
            if (deptEl) deptEl.value = '';
            document.querySelectorAll('.dash-shortcut').forEach(function (btn) {
                btn.classList.remove('border-subgreen-500', 'bg-subgreen-50', 'text-subgreen-700', 'dark:border-subgreen-500', 'dark:bg-subgreen-900/20', 'dark:text-subgreen-400');
            });
        }
        function initDashboardCharts() {
            var attendanceCanvas = document.getElementById('attendanceChart');
            var deptCanvas = document.getElementById('deptChart');
            if (!attendanceCanvas || !deptCanvas) return;
            if (typeof Chart === 'undefined') {
                setTimeout(initDashboardCharts, 120);
                return;
            }

            dashSetShortcut('month');

            destroyDashboardCharts();

            var isDark = document.documentElement.classList.contains('dark');
            var gridColor = isDark ? '#374151' : '#f3f4f6';
            var textColor = isDark ? '#9ca3af' : '#6b7280';

            var ctx1 = attendanceCanvas.getContext('2d');
            var gradient1 = ctx1.createLinearGradient(0, 0, 0, 300);
            gradient1.addColorStop(0, 'rgba(16, 185, 129, 0.2)');
            gradient1.addColorStop(1, 'rgba(16, 185, 129, 0.0)');

            window.__dashAttendanceChart = new Chart(ctx1, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(days)),
                    datasets: [
                        {
                            label: 'On Time',
                            data: @Html.Raw(Json.Serialize(onTimeData)),
                            borderColor: '#10b981',
                            backgroundColor: gradient1,
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            pointRadius: 3
                        },
                        {
                            label: 'Late',
                            data: @Html.Raw(Json.Serialize(lateData)),
                            borderColor: '#f59e0b',
                            borderWidth: 2,
                            borderDash: [5, 5],
                            fill: false,
                            tension: 0.4,
                            pointRadius: 3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { labels: { color: textColor } }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: gridColor },
                            ticks: { color: textColor }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: textColor }
                        }
                    }
                }
            });

            var ctx2 = deptCanvas.getContext('2d');
            window.__dashDeptChart = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(deptLabels)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(deptData)),
                        backgroundColor: ['#4f46e5', '#10b981', '#f59e0b', '#ec4899', '#6366f1'],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    cutout: '70%'
                }
            });
        }

        function destroyDashboardCharts() {
            if (window.__dashAttendanceChart) {
                window.__dashAttendanceChart.destroy();
                window.__dashAttendanceChart = null;
            }
            if (window.__dashDeptChart) {
                window.__dashDeptChart.destroy();
                window.__dashDeptChart = null;
            }
        }

        function bindDashboardInitEvents() {
            if (window.__dashInitEventsBound) return;
            window.__dashInitEventsBound = true;

            document.addEventListener('DOMContentLoaded', initDashboardCharts);
            document.addEventListener('turbo:load', initDashboardCharts);
            document.addEventListener('turbo:before-cache', destroyDashboardCharts);
            window.addEventListener('pageshow', initDashboardCharts);
        }

        bindDashboardInitEvents();
        initDashboardCharts();
    </script>
}
