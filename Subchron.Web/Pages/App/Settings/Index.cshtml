@page
@model Subchron.Web.Pages.App.Settings.IndexModel
@{
    ViewData["Title"] = "Settings";
    Layout = "/Pages/App/Shared/_LayoutAdmin.cshtml";
    var currentTab = Model.CurrentTab;
}

<div class="mx-auto">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-subgreen-500 dark:text-white">Settings</h1>
        <p class="text-base text-slate-500 dark:text-slate-400">Manage your account, plan, and preferences.</p>
    </div>

    <div class="flex flex-col gap-6 lg:flex-row lg:gap-8">
        <!-- Left: tab navigation (subgreen accent) -->
        <aside class="w-full flex-shrink-0 lg:w-56">
            <nav class="flex flex-wrap gap-2 rounded-xl border border-slate-200 bg-white p-2 shadow-sm dark:border-slate-700 dark:bg-slate-800 lg:flex-col lg:flex-nowrap ring-1 ring-slate-200/50 dark:ring-slate-700/50" aria-label="Settings sections">
                <a asp-page="/App/Settings/Index" asp-route-tab="@IndexModel.TabProfile"
                   class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabProfile ? "bg-subgreen-100 text-subgreen-800 dark:bg-subgreen-900/30 dark:text-subgreen-300" : "text-slate-600 hover:bg-subgreen-50/50 dark:text-slate-300 dark:hover:bg-subgreen-900/10")">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                    <span>Profile</span>
                </a>
                <a asp-page="/App/Settings/Index" asp-route-tab="@IndexModel.TabUpgradePlan"
                   class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabUpgradePlan ? "bg-subgreen-100 text-subgreen-800 dark:bg-subgreen-900/30 dark:text-subgreen-300" : "text-slate-600 hover:bg-subgreen-50/50 dark:text-slate-300 dark:hover:bg-subgreen-900/10")">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <span>Upgrade Plan</span>
                </a>
                <a asp-page="/App/Settings/Index" asp-route-tab="@IndexModel.TabSecurity"
                   class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabSecurity ? "bg-subgreen-100 text-subgreen-800 dark:bg-subgreen-900/30 dark:text-subgreen-300" : "text-slate-600 hover:bg-subgreen-50/50 dark:text-slate-300 dark:hover:bg-subgreen-900/10")">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
                    <span>Security</span>
                </a>
                <a asp-page="/App/Settings/Index" asp-route-tab="@IndexModel.TabResources"
                   class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabResources ? "bg-subgreen-100 text-subgreen-800 dark:bg-subgreen-900/30 dark:text-subgreen-300" : "text-slate-600 hover:bg-subgreen-50/50 dark:text-slate-300 dark:hover:bg-subgreen-900/10")">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
                    <span>Resources</span>
                </a>
            </nav>
        </aside>

        <!-- Right: content -->
        <div id="settingsPanelHost" class="min-w-0 flex-1" aria-busy="true">
            <div id="settingsPanelSkeleton" class="animate-pulse">
                @switch (currentTab)
                {
                    case IndexModel.TabSecurity:
                        <div class="space-y-4">
                            <div class="rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-900">
                                <div class="h-6 w-52 rounded bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-4 h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-3 h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-4 h-11 w-44 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                            <div class="rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-900">
                                <div class="h-6 w-40 rounded bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-4 h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-4 h-11 w-36 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                        </div>
                        break;
                    case IndexModel.TabUpgradePlan:
                        <div class="space-y-4">
                            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
                                <div class="h-56 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                                <div class="h-56 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                            <div class="rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-900">
                                <div class="h-5 w-40 rounded bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-3 h-4 w-72 rounded bg-slate-200 dark:bg-slate-700"></div>
                                <div class="mt-4 h-10 w-32 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                        </div>
                        break;
                    case IndexModel.TabResources:
                        <div class="space-y-3 rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-900">
                            <div class="h-14 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            <div class="h-14 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            <div class="h-14 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                            <div class="h-14 rounded-xl bg-slate-200 dark:bg-slate-700"></div>
                        </div>
                        break;
                    default:
                        <div class="space-y-5 rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-900">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-4">
                                    <div class="h-24 w-24 rounded-full bg-slate-200 dark:bg-slate-700"></div>
                                    <div class="space-y-2">
                                        <div class="h-5 w-40 rounded bg-slate-200 dark:bg-slate-700"></div>
                                        <div class="h-4 w-56 rounded bg-slate-200 dark:bg-slate-700"></div>
                                    </div>
                                </div>
                                <div class="h-10 w-24 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                            <div class="grid grid-cols-1 gap-3 sm:grid-cols-3">
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                            <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                                <div class="h-10 rounded-lg bg-slate-200 dark:bg-slate-700"></div>
                            </div>
                        </div>
                        break;
                }
            </div>

            <div id="settingsPanelContent" class="hidden">
                <div id="settingsLoadError" class="mb-4 hidden rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700 dark:border-red-900/40 dark:bg-red-900/20 dark:text-red-300"></div>

                @switch (currentTab)
                {
                    case IndexModel.TabSecurity:
                        @await Html.PartialAsync("Partials/_SecuritySettings", Model)
                        break;
                    case IndexModel.TabUpgradePlan:
                        @await Html.PartialAsync("Partials/_UpgradePlanSettings", Model)
                        break;
                    case IndexModel.TabPersonalization:
                        @await Html.PartialAsync("Partials/_PersonalizationSettings", Model)
                        break;
                    case IndexModel.TabResources:
                        @await Html.PartialAsync("Partials/_ResourcesSettings", Model)
                        break;
                    default:
                        @await Html.PartialAsync("Partials/_ProfileSettings", Model)
                        break;
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
(function () {
    var panel = document.getElementById('settingsPanelHost');
    var skeleton = document.getElementById('settingsPanelSkeleton');
    var content = document.getElementById('settingsPanelContent');
    if (!panel || !skeleton || !content) return;

    var revealTimer = null;
    var minVisibleMs = window.matchMedia('(prefers-reduced-motion: reduce)').matches ? 0 : 220;
    var shownAt = Date.now();

    function showSkeleton() {
        if (revealTimer) { clearTimeout(revealTimer); revealTimer = null; }
        shownAt = Date.now();
        panel.setAttribute('aria-busy', 'true');
        skeleton.classList.remove('hidden');
        content.classList.add('hidden');
    }

    function setEl(id, value, attr) {
        var el = document.getElementById(id);
        if (!el) return;
        var v = value != null && value !== undefined ? value : '';
        if (attr === 'value') el.value = v;
        else if (attr === 'src') { el.src = v; el.classList.toggle('hidden', !v); }
        else if (attr === 'style') el.setAttribute('style', v);
        else el.textContent = v;
    }

    function applyData(data) {
        if (!data) return;
        var errEl = document.getElementById('settingsLoadError');
        if (errEl) {
            if (data.loadError) {
                errEl.textContent = data.loadError;
                errEl.classList.remove('hidden');
            } else {
                errEl.textContent = '';
                errEl.classList.add('hidden');
            }
        }
        setEl('settingsProfileDisplayName', data.profileName || 'Unnamed User');
        setEl('settingsProfileEmail', data.profileEmail || '');
        var avatarEl = document.getElementById('profileAvatarImg');
        if (avatarEl && data.profileAvatarUrl) {
            avatarEl.src = data.profileAvatarUrl + (data.profileAvatarUrl.indexOf('?') !== -1 ? '&' : '?') + 'v=' + Date.now();
            avatarEl.classList.remove('hidden');
        }
        setEl('settingsPlanName', data.planName);
        setEl('settingsEmployeesUsed', data.employeesUsed);
        setEl('settingsEmployeeLimit', data.employeeLimit);
        setEl('settingsBillingCycle', data.billingCycle);
        setEl('settingsNextBillingDate', data.nextBillingDate);
        var usageBar = document.getElementById('settingsUsageBar');
        if (usageBar && data.employeeLimit > 0) {
            var pct = Math.min(100, Math.round((data.employeesUsed || 0) * 100 / data.employeeLimit));
            usageBar.style.width = pct + '%';
        }
        var empSection = document.getElementById('settingsEmployeeSection');
        if (empSection) empSection.classList.toggle('hidden', !data.hasEmployee);
        var form = content.querySelector('form#employeeForm');
        if (form && data.hasEmployee) {
            var names = ['FirstName', 'MiddleName', 'LastName', 'AddressLine1', 'AddressLine2', 'City', 'StateProvince', 'PostalCode', 'Country', 'Phone', 'EmergencyContactName', 'EmergencyContactPhone', 'EmergencyContactRelation'];
            var keys = ['empFirstName', 'empMiddleName', 'empLastName', 'empAddressLine1', 'empAddressLine2', 'empCity', 'empStateProvince', 'empPostalCode', 'empCountry', 'empPhone', 'empEmergencyContactName', 'empEmergencyContactPhone', 'empEmergencyContactRelation'];
            for (var i = 0; i < names.length; i++) {
                var input = form.querySelector('[name="' + names[i] + '"]');
                if (input && data[keys[i]] != null) input.value = data[keys[i]];
            }
        }
    }

    function revealSettingsContent() {
        var elapsed = Date.now() - shownAt;
        var wait = Math.max(0, minVisibleMs - elapsed);
        revealTimer = setTimeout(function () {
            skeleton.classList.add('hidden');
            content.classList.remove('hidden');
            panel.setAttribute('aria-busy', 'false');
            revealTimer = null;
        }, wait);
    }

    showSkeleton();
    function onDataReady() {
        var params = new URLSearchParams(window.location.search);
        var tab = params.get('tab') || '@(currentTab)';
        var url = window.location.pathname + '?handler=Data&tab=' + encodeURIComponent(tab);
        fetch(url, { headers: { 'Accept': 'application/json' } })
            .then(function (r) { return r.json(); })
            .then(function (data) {
                applyData(data);
                revealSettingsContent();
            })
            .catch(function () {
                setEl('settingsLoadError', 'Unable to load settings.');
                document.getElementById('settingsLoadError').classList.remove('hidden');
                revealSettingsContent();
            });
    }
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', onDataReady, { once: true });
    } else {
        onDataReady();
    }
    document.addEventListener('turbo:before-cache', showSkeleton);
})();
</script>
}
