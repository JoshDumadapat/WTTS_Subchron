@section Scripts {
<script>
(function () {
    var panel = document.getElementById('settingsPanelHost');
    var skeleton = document.getElementById('settingsPanelSkeleton');
    var content = document.getElementById('settingsPanelContent');
    if (!panel || !skeleton || !content) return;

    var revealTimer = null;
    var minVisibleMs = window.matchMedia('(prefers-reduced-motion: reduce)').matches ? 0 : 220;
    var shownAt = Date.now();

    function showSkeleton() {
        if (revealTimer) { clearTimeout(revealTimer); revealTimer = null; }
        shownAt = Date.now();
        panel.setAttribute('aria-busy', 'true');
        skeleton.classList.remove('hidden');
        content.classList.add('hidden');
    }

    function setEl(id, value, attr) {
        var el = document.getElementById(id);
        if (!el) return;
        var v = value != null && value !== undefined ? value : '';
        if (attr === 'value') el.value = v;
        else if (attr === 'src') { el.src = v; el.classList.toggle('hidden', !v); }
        else if (attr === 'style') el.setAttribute('style', v);
        else el.textContent = v;
    }

    function applyData(data) {
        if (!data) return;
        var errEl = document.getElementById('settingsLoadError');
        if (errEl) {
            if (data.loadError) {
                errEl.textContent = data.loadError;
                errEl.classList.remove('hidden');
            } else {
                errEl.textContent = '';
                errEl.classList.add('hidden');
            }
        }
        setEl('settingsProfileDisplayName', data.profileName || 'Unnamed User');
        setEl('settingsProfileEmail', data.profileEmail || '');
        var avatarEl = document.getElementById('profileAvatarImg');
        if (avatarEl && data.profileAvatarUrl) {
            avatarEl.src = data.profileAvatarUrl + (data.profileAvatarUrl.indexOf('?') !== -1 ? '&' : '?') + 'v=' + Date.now();
            avatarEl.classList.remove('hidden');
        }
        setEl('settingsPlanName', data.planName);
        setEl('settingsEmployeesUsed', data.employeesUsed);
        setEl('settingsEmployeeLimit', data.employeeLimit);
        setEl('settingsBillingCycle', data.billingCycle);
        setEl('settingsNextBillingDate', data.nextBillingDate);
        var usageBar = document.getElementById('settingsUsageBar');
        if (usageBar && data.employeeLimit > 0) {
            var pct = Math.min(100, Math.round((data.employeesUsed || 0) * 100 / data.employeeLimit));
            usageBar.style.width = pct + '%';
        }
        var empSection = document.getElementById('settingsEmployeeSection');
        if (empSection) empSection.classList.toggle('hidden', !data.hasEmployee);
        var form = content.querySelector('form#employeeForm');
        if (form && data.hasEmployee) {
            var names = ['FirstName', 'MiddleName', 'LastName', 'AddressLine1', 'AddressLine2', 'City', 'StateProvince', 'PostalCode', 'Country', 'Phone', 'EmergencyContactName', 'EmergencyContactPhone', 'EmergencyContactRelation'];
            var keys = ['empFirstName', 'empMiddleName', 'empLastName', 'empAddressLine1', 'empAddressLine2', 'empCity', 'empStateProvince', 'empPostalCode', 'empCountry', 'empPhone', 'empEmergencyContactName', 'empEmergencyContactPhone', 'empEmergencyContactRelation'];
            for (var i = 0; i < names.length; i++) {
                var input = form.querySelector('[name="' + names[i] + '"]');
                if (input && data[keys[i]] != null) input.value = data[keys[i]];
            }
        }
        var pwdSection = document.getElementById('securityPasswordSection');
        var googleSection = document.getElementById('securityGoogleSection');
        if (pwdSection) pwdSection.classList.toggle('hidden', !!data.isGoogleUser);
        if (googleSection) googleSection.classList.toggle('hidden', !data.isGoogleUser);
    }

    function revealSettingsContent() {
        var elapsed = Date.now() - shownAt;
        var wait = Math.max(0, minVisibleMs - elapsed);
        revealTimer = setTimeout(function () {
            skeleton.classList.add('hidden');
            content.classList.remove('hidden');
            panel.setAttribute('aria-busy', 'false');
            revealTimer = null;
        }, wait);
    }

    showSkeleton();
    function onDataReady() {
        var params = new URLSearchParams(window.location.search);
        var tab = params.get('tab') || '@(currentTab)';
        var url = window.location.pathname + '?handler=Data&tab=' + encodeURIComponent(tab);
        fetch(url, { headers: { 'Accept': 'application/json' } })
            .then(function (r) { return r.json(); })
            .then(function (data) {
                applyData(data);
                revealSettingsContent();
            })
            .catch(function () {
                setEl('settingsLoadError', 'Unable to load settings.');
                document.getElementById('settingsLoadError').classList.remove('hidden');
                revealSettingsContent();
            });
    }
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', onDataReady, { once: true });
    } else {
        onDataReady();
    }
    document.addEventListener('turbo:before-cache', showSkeleton);
})();
</script>
<script>
// Inline billing edit: fetch current billing info and allow saving (metadata-only)
(function () {
    var btn = document.getElementById('btnEditBilling');
    var panel = document.getElementById('billingEditPanel');
    var cancel = document.getElementById('billingCancelBtn');
    var saveBtn = document.getElementById('billingSaveBtn');
    var errEl = document.getElementById('billingEditError');

    if (!btn || !panel) return;

    function showError(msg) {
        if (!errEl) return;
        errEl.textContent = msg || '';
        errEl.classList.toggle('hidden', !msg);
    }

    function openPanel() {
        panel.classList.remove('hidden');
        showError('');
        var url = window.location.pathname + '?handler=BillingCurrent';
        fetch(url, { headers: { 'Accept': 'application/json' } })
            .then(function (r) {
                if (!r.ok) return r.text().then(function (t) { throw new Error(t || ('Status ' + r.status)); });
                return r.json();
            })
            .then(function (data) {
                try {
                    // Contact
                    document.getElementById('billingEmail').value = data.billingEmail || data.email || '';
                    document.getElementById('billingPhone').value = data.billingPhone || data.phone || '';

                    // Determine method (support both 'method' and 'brand')
                    var method = (data.method || data.brand || 'card');
                    setTabs(method);

                    if (method === 'card') {
                        // Show card metadata (masked)
                        var brand = (data.brand || '').toString();
                        var last4 = (data.last4 || data.cardLast4 || data.maskedLast4 || '').toString();
                        var cardOnFile = document.getElementById('cardOnFile');
                        if (cardOnFile) {
                            if (last4) cardOnFile.textContent = (brand ? brand + ' ' : '') + 'ending in ' + last4;
                            else cardOnFile.textContent = 'Card on file';
                        }

                        // Prefill editable metadata fields (name, expiry, address)
                        document.getElementById('cardName').value = data.nameOnCard || data.name || '';
                        document.getElementById('cardExp').value = data.expiry || '';
                        document.getElementById('cardBillingCity').value = (data.address && data.address.city) || data.city || '';
                        document.getElementById('cardBillingProvince').value = (data.address && data.address.state) || data.province || data.stateProvince || '';
                        document.getElementById('cardBillingPostal').value = (data.address && data.address.postal_code) || data.postalCode || data.postal || '';
                        document.getElementById('cardBillingCountry').value = (data.address && data.address.country) || data.country || '';
                        document.getElementById('cardAddressLine1').value = (data.address && data.address.line1) || data.addressLine1 || '';
                        document.getElementById('cardAddressLine2').value = (data.address && data.address.line2) || data.addressLine2 || '';
                    } else {
                        // e-wallets: prefill customer name/email if available
                        document.getElementById('ewalletNameInput').value = data.customerName || data.nameOnCard || data.name || '';
                        // show a short note about linked account (if available)
                        var panelIcon = document.getElementById('panelEwalletIcon');
                        if (panelIcon) panelIcon.src = method === 'gcash' ? '/images/payment/gcashicon.png' : '/images/payment/mayaicon.png';
                    }
                } catch (e) { console.warn('populate error', e); }
            })
            .catch(function (err) {
                showError('Could not load current billing information. You can still enter new details.');
                console.warn('billing fetch error:', err && err.message ? err.message : err);
            });
    }

    btn.addEventListener('click', function () { openPanel(); });
    cancel?.addEventListener('click', function () { panel.classList.add('hidden'); });

    // payment tabs
    var tabCard = document.getElementById('tabCard');
    var tabGcash = document.getElementById('tabGcash');
    var tabPaymaya = document.getElementById('tabPaymaya');
    var panelCard = document.getElementById('panelCard');
    var panelEwallet = document.getElementById('panelEwallet');
    var panelEwalletIcon = document.getElementById('panelEwalletIcon');
    function setTabs(method) {
        var activeClassList = ['border-subgreen-400', 'bg-subgreen-50/50'];
        [tabCard, tabGcash, tabPaymaya].forEach(function (t) {
            if (!t) return;
            var isActive = (t.dataset.method === method);
            t.dataset.active = isActive ? 'true' : '';
            // Toggle visual classes to match hover state when selected
            activeClassList.forEach(function (c) {
                if (isActive) t.classList.add(c); else t.classList.remove(c);
            });
        });
        if (panelCard) panelCard.classList.toggle('hidden', method !== 'card');
        if (panelEwallet) panelEwallet.classList.toggle('hidden', method === 'card');
        if (panelEwalletIcon) panelEwalletIcon.src = method === 'gcash' ? '/images/payment/gcashicon.png' : '/images/payment/mayaicon.png';
    }
    tabCard?.addEventListener('click', function () { setTabs('card'); });
    tabGcash?.addEventListener('click', function () { setTabs('gcash'); });
    tabPaymaya?.addEventListener('click', function () { setTabs('paymaya'); });

    function getActiveMethod() {
        var tabs = [tabCard, tabGcash, tabPaymaya];
        for (var i = 0; i < tabs.length; i++) {
            var t = tabs[i];
            if (!t) continue;
            if (t.dataset.active === 'true' || t.getAttribute('data-active') === 'true') return t.dataset.method;
        }
        return 'card';
    }

    saveBtn?.addEventListener('click', function () {
        showError('');
        if (!saveBtn) return;
        var email = (document.getElementById('billingEmail')?.value || '').trim();
        var phone = (document.getElementById('billingPhone')?.value || '').trim();
        var method = getActiveMethod();

        if (!email) { showError('Email is required.'); return; }

        var addr1 = (document.getElementById('cardAddressLine1')?.value || '').trim();
        var addr2 = (document.getElementById('cardAddressLine2')?.value || '').trim();
        var city = (document.getElementById('cardBillingCity')?.value || '').trim();
        var province = (document.getElementById('cardBillingProvince')?.value || '').trim();
        var postal = (document.getElementById('cardBillingPostal')?.value || '').trim();
        var country = (document.getElementById('cardBillingCountry')?.value || '').trim();
        var ewalletName = (document.getElementById('ewalletNameInput')?.value || '').trim();

        saveBtn.disabled = true;
        var origText = saveBtn.textContent;
        saveBtn.textContent = 'Saving...';

        var payload = {
            billingEmail: email,
            billingPhone: phone,
            method: method,
            address: {
                line1: addr1 || undefined,
                line2: addr2 || undefined,
                city: city || undefined,
                state: province || undefined,
                postal_code: postal || undefined,
                country: country || undefined
            }
        };
        if (method !== 'card') {
            payload.customerName = ewalletName || undefined;
        }

        fetch(window.location.pathname + '?handler=UpdateBilling', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
            body: JSON.stringify(payload)
        })
            .then(function (r) {
                if (!r.ok) return r.text().then(function (t) { throw new Error(t || ('Status ' + r.status)); });
                return r.json().catch(function () { return { ok: true }; });
            })
            .then(function (data) {
                if (typeof showToast === 'function') showToast('Billing information updated.', true);
                panel.classList.add('hidden');
                setTimeout(function () { location.reload(); }, 600);
            })
            .catch(function (err) {
                var msg = err && err.message ? err.message : 'Could not save billing information.';
                showError(msg);
            })
            .finally(function () {
