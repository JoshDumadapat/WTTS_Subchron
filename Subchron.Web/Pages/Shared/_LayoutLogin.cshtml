<!DOCTYPE html>
<html lang="en" class="scroll-smooth" id="htmlRoot">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Subchron</title>

    <!-- Tailwind CSS CDN (dev only; use Tailwind CLI in production). Suppress CDN warning in console. -->
    <script>
        (function () {
            var w = console.warn;
            if (typeof w === 'function') {
                console.warn = function () {
                    if (arguments[0] && typeof arguments[0] === 'string' && arguments[0].indexOf('cdn.tailwindcss.com') !== -1) return;
                    return w.apply(console, arguments);
                };
            }
        })();
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
 <script>
      tailwind.config = {
          darkMode: 'class',
            theme: {
     extend: {
                    colors: {
            subgreen: {
            50: '#f0fdf4',
          100: '#dcfce7',
         200: '#bbf7d0',
             300: '#86efac',
 400: '#4ade80',
             500: '#22c55e',
         600: '#16a34a',
  700: '#15803d',
    800: '#166534',
     900: '#14532d',
    },
      subblue: {
      50: '#eff6ff',
   100: '#dbeafe',
       200: '#bfdbfe',
      300: '#93c5fd',
   400: '#60a5fa',
      500: '#3b82f6',
    600: '#2563eb',
            700: '#1d4ed8',
             800: '#1e40af',
      900: '#1e3a8a',
       },
          },
       animation: {
       'glow-pulse': 'glow-pulse 4s ease-in-out infinite',
                    },
                keyframes: {
        'glow-pulse': {
 '0%, 100%': { opacity: '0.6' },
      '50%': { opacity: '0.8' },
    },
         },
           },
            },
        }
    </script>

    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />

    <!-- SAME THEME BOOTSTRAP (must run before paint) -->
    <script>
        (function () {
const stored = localStorage.getItem('subchron-theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
   const dark = stored === 'dark' || (!stored && prefersDark);

            if (dark) document.documentElement.classList.add('dark');
            else document.documentElement.classList.remove('dark');
        })();
    </script>
</head>

<body class="min-h-screen bg-slate-50 text-slate-900 antialiased
             selection:bg-subgreen-200 selection:text-subgreen-900
             dark:bg-slate-900 dark:text-slate-100
             dark:selection:bg-subgreen-800 dark:selection:text-subgreen-100">

    <!-- Optional: keep the same background orbs for consistency -->
    <div class="pointer-events-none fixed inset-0 -z-10 overflow-hidden" aria-hidden="true">
        <div class="animate-glow-pulse absolute -top-[10%] -left-[15%] h-[50%] w-[50%] rounded-full bg-subgreen-100/60 blur-[140px] dark:bg-subgreen-900/30 dark:opacity-60"></div>
        <div class="animate-glow-pulse absolute top-[15%] -right-[15%] h-[45%] w-[45%] rounded-full bg-subblue-100/60 blur-[140px] dark:bg-subblue-900/30 dark:opacity-60" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-[10%] left-1/2 h-[35%] w-[40%] -translate-x-1/2 rounded-full bg-subgreen-50/40 blur-[100px] dark:bg-subgreen-900/20 dark:opacity-50" style="animation-delay: 0.5s;"></div>
        <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(0,96,176,0.03)_1px,transparent_1px),linear-gradient(to_bottom,rgba(0,96,176,0.03)_1px,transparent_1px)]
                    dark:bg-[linear-gradient(to_right,rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.02)_1px,transparent_1px)]
                    bg-[size:4rem_4rem]"></div>
    </div>

    <!-- Centered auth container -->
    <main class="flex min-h-screen items-center justify-center px-4 py-12">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
