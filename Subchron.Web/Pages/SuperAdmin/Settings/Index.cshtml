@page
@model Subchron.Web.Pages.SuperAdmin.Settings.IndexModel
@{
    ViewData["Title"] = "Settings";
    ViewData["PageTitle"] = "Settings";
    Layout = "~/Pages/SuperAdmin/Shared/_LayoutSuperAdmin.cshtml";
    var currentTab = Model.CurrentTab;
}

<div class="flex gap-6">
    <!-- Left sidebar / tab navigation -->
    <aside class="w-56 flex-shrink-0 rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800">
        <nav class="p-2" aria-label="Settings sections">
            <a asp-page="/SuperAdmin/Settings/Index" asp-route-tab="@IndexModel.TabProfile"
               class="settings-nav-item flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabProfile ? "active bg-emerald-50 text-emerald-700 dark:bg-emerald-900/20 dark:text-emerald-300" : "text-slate-600 hover:bg-slate-50 dark:text-slate-300 dark:hover:bg-slate-700/60")">
                <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>Profile</span>
            </a>
            <a asp-page="/SuperAdmin/Settings/Index" asp-route-tab="@IndexModel.TabAccount"
               class="settings-nav-item flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabAccount ? "active bg-emerald-50 text-emerald-700 dark:bg-emerald-900/20 dark:text-emerald-300" : "text-slate-600 hover:bg-slate-50 dark:text-slate-300 dark:hover:bg-slate-700/60")">
                <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>Account</span>
            </a>
            <a asp-page="/SuperAdmin/Settings/Index" asp-route-tab="@IndexModel.TabPreferences"
               class="settings-nav-item flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition @(currentTab == IndexModel.TabPreferences ? "active bg-emerald-50 text-emerald-700 dark:bg-emerald-900/20 dark:text-emerald-300" : "text-slate-600 hover:bg-slate-50 dark:text-slate-300 dark:hover:bg-slate-700/60")">
                <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                <span>Preferences</span>
            </a>
        </nav>
    </aside>

    <!-- Content area: load section partial -->
    <div class="min-w-0 flex-1 rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800">
        @switch (currentTab)
        {
            case IndexModel.TabAccount:
                @await Html.PartialAsync("Partials/_AccountSettings", Model)
                break;
            case IndexModel.TabPreferences:
                @await Html.PartialAsync("Partials/_PreferencesSettings", Model)
                break;
            default:
                @await Html.PartialAsync("Partials/_ProfileSettings", Model)
                break;
        }
    </div>
</div>
