@using System.Security.Claims
@{
    var saDisplayName = User.FindFirst(ClaimTypes.Name)?.Value ?? User.Identity?.Name ?? "Super Admin";
    var saRoleClaim = User.FindFirst(ClaimTypes.Role)?.Value ?? User.FindFirst("role")?.Value ?? "SuperAdmin";
    var saRoleDisplay = string.IsNullOrEmpty(saRoleClaim) ? "Administrator" : System.Text.RegularExpressions.Regex.Replace(saRoleClaim, "([a-z])([A-Z])", "$1 $2").Trim();
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth" id="htmlRoot">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Super Admin - Subchron</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                subgreen: "#16a34a",
                subgreenScale: {
                  50: '#f0fdf4', 100: '#dcfce7', 200: '#bbf7d0', 300: '#86efac', 400: '#4ade80',
                  500: '#22c55e', 600: '#16a34a', 700: '#15803d', 800: '#166534', 900: '#14532d',
                },
                subblue: {
                  50: '#eff6ff', 100: '#dbeafe', 200: '#bfdbfe', 300: '#93c5fd', 400: '#60a5fa',
                  500: '#3b82f6', 600: '#2563eb', 700: '#1d4ed8', 800: '#1e40af', 900: '#1e3a8a',
                }
              }
            }
          }
        };
    </script>

    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />

    <!-- Apply stored theme before paint -->
    <script>
        (function () {
          const stored = localStorage.getItem("subchron-theme");
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          const dark = stored === "dark" || (!stored && prefersDark);
          document.documentElement.classList.toggle("dark", dark);
        })();
    </script>

    <style>
        /* ============
                   ADMIN-LIKE LAYOUT + FUNCTIONALITY (ported)
                   - KEEP SIDEBAR CONTENT/ROUTES AS-IS
                   - Add active focus indicator on the selected page
                   ============ */

        #sidebar {
            transition: width 0.3s ease-in-out;
        }

        .sidebar-collapsed #sidebar {
            width: 82px !important;
        }

        .sidebar-collapsed .sidebar-label,
        .sidebar-collapsed .sidebar-user-text,
        .sidebar-collapsed .company-name {
            opacity: 0;
            width: 0;
            overflow: hidden;
            pointer-events: none;
        }

        .sidebar-label,
        .sidebar-user-text,
        .company-name {
            white-space: nowrap;
            flex: 1 1 auto;
            min-width: 0;
        }

        /* Sidebar top header (logo + name) */
        .profile-header {
            position: relative;
            display: flex;
            align-items: center;
            gap: 12px;
            overflow: hidden;
        }

        .logo-box {
            width: 52px;
            height: 52px;
            overflow: hidden;
            flex-shrink: 0;
            border-radius: 0;
            background: transparent;
        }

        .profile-header img {
            width: 100%;
            height: 100%;
            display: block;
            object-fit: cover;
            border: 0;
        }

        /* Toggle button bubble */
        .toggle-wrap {
            position: absolute;
            right: -17px;
            top: 50px;
            transform: translateY(-50%);
            width: 34px;
            height: 34px;
            border-radius: 9999px;
            background: #f8fafc;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 6px 18px rgba(15, 23, 42, 0.08);
            border: 1px solid rgba(226, 232, 240, 0.9);
            z-index: 30;
        }

        .dark .toggle-wrap {
            background: #0f172a;
            border-color: rgba(51, 65, 85, 0.9);
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.25);
        }

        .toggle-btn {
            width: 26px;
            height: 26px;
            background: #16a34a;
            border-radius: 50%;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: 0;
        }

        .dark .toggle-btn {
            background: #22c55e;
        }

        #sidebarToggle svg {
            transition: transform 0.25s ease;
        }

        .sidebar-collapsed #sidebarToggle svg {
            transform: rotate(180deg);
        }

        /* Nav */
        .nav-item {
            position: relative;
            overflow: visible;
        }

            .nav-item.active {
                background-color: rgba(22, 163, 74, 0.10);
                color: #16a34a;
                font-weight: 700;
            }

        .dark .nav-item.active {
            background-color: rgba(34, 197, 94, 0.14);
            color: #22c55e;
        }

        .nav-item:hover {
            background-color: rgba(22, 163, 74, 0.10);
            color: #16a34a;
        }

        .dark .nav-item:hover {
            background-color: rgba(34, 197, 94, 0.14);
            color: #22c55e;
        }

        /* Right-side indicator bar (like Admin layout) */
        .nav-indicator {
            position: absolute;
            right: -14px;
            top: 50%;
            transform: translate(50%, -50%);
            width: 6px;
            height: 35px;
            border-radius: 9999px;
            background: #16a34a;
            opacity: 0;
            transition: opacity 0.2s ease;
            z-index: 5;
        }

        .dark .nav-indicator {
            background: #22c55e;
        }

        .nav-item.active .nav-indicator {
            opacity: 1;
        }

        /* Make keyboard focus visible and consistent */
        .nav-focus:focus,
        .nav-focus:focus-visible,
        #logoutBtn:focus,
        #logoutBtn:focus-visible,
        #themeToggle:focus,
        #themeToggle:focus-visible,
        #notificationBtn:focus,
        #notificationBtn:focus-visible,
        #mobileSidebarOpen:focus,
        #mobileSidebarOpen:focus-visible,
        #sidebarToggle:focus,
        #sidebarToggle:focus-visible {
            outline: none;
            box-shadow: 0 0 0 2px #e2e8f0, 0 0 0 4px rgba(255,255,255,0.9);
            border-radius: 14px;
        }

        .dark .nav-focus:focus,
        .dark .nav-focus:focus-visible,
        .dark #logoutBtn:focus,
        .dark #logoutBtn:focus-visible,
        .dark #themeToggle:focus,
        .dark #themeToggle:focus-visible,
        .dark #notificationBtn:focus,
        .dark #notificationBtn:focus-visible,
        .dark #mobileSidebarOpen:focus,
        .dark #mobileSidebarOpen:focus-visible,
        .dark #sidebarToggle:focus,
        .dark #sidebarToggle:focus-visible {
            box-shadow: 0 0 0 2px #64748b, 0 0 0 4px rgba(15,23,42,0.9);
        }

        /* HR like admin */
        .sidebar-hr {
            border: 0;
            border-top: 1px solid #e5e7eb;
            opacity: 0.9;
            margin: 0;
        }

        .dark .sidebar-hr {
            border-top-color: #334155;
            opacity: 0.8;
        }

        /* Mobile sidebar behavior (Admin-like overlay slide-in) */
        @@media (max-width: 767px) {
            #sidebar {
                position: fixed;
                top: 0;
                left: 0;
                bottom: 0;
                width: 260px !important;
                height: 100vh !important;
                transform: translateX(-110%);
                transition: transform 0.25s ease;
                z-index: 20;
                margin-right: 0 !important;
            }

            .sidebar-mobile-open #sidebar {
                transform: translateX(0);
            }

            .sidebar-collapsed #sidebar {
                width: 260px !important;
            }

            .sidebar-collapsed .sidebar-label,
            .sidebar-collapsed .sidebar-user-text,
            .sidebar-collapsed .company-name {
                opacity: 1;
                width: auto;
                pointer-events: auto;
            }

            .toggle-wrap {
                right: 12px;
                top: 50px;
                transform: translateY(-50%);
            }
        }

        /* Hide scrollbars for nav (like admin) */
        #sidebar nav {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

            #sidebar nav::-webkit-scrollbar {
                width: 0;
                height: 0;
                display: none;
            }
    </style>
</head>

<body id="appRoot" class="min-h-screen bg-slate-50 text-slate-900 antialiased dark:bg-slate-900 dark:text-slate-100">
    <!-- Background orbs (kept) -->
    <div class="pointer-events-none fixed inset-0 -z-10 overflow-hidden" aria-hidden="true">
        <div class="absolute -top-[10%] -left-[15%] h-[50%] w-[50%] rounded-full bg-emerald-100/40 blur-[140px] dark:bg-emerald-900/25"></div>
        <div class="absolute top-[15%] -right-[15%] h-[45%] w-[45%] rounded-full bg-sky-100/40 blur-[140px] dark:bg-sky-900/20"></div>
        <div class="absolute bottom-[10%] left-1/2 h-[35%] w-[40%] -translate-x-1/2 rounded-full bg-emerald-50/30 blur-[100px] dark:bg-emerald-900/15"></div>
    </div>

    <!-- Admin-like mobile overlay -->
    <div id="sidebarOverlay"
         class="backdrop-blur-[1px] fixed inset-0 z-10 hidden bg-slate-900/40 md:hidden"
         aria-hidden="true"></div>

    <div class="flex h-screen overflow-hidden">
        <!-- SIDEBAR (content/links preserved) -->
        <aside id="sidebar"
               class="relative z-20 flex flex-col border-r border-slate-200 bg-white text-slate-600 shadow-xl dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300"
               style="width: 260px;">
            <div class="toggle-wrap" aria-hidden="false">
                <button id="sidebarToggle" class="toggle-btn" type="button" aria-label="Sidebar toggle / close">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
            </div>

            <!-- Top header (admin-like) -->
            <div class="flex h-[100px] items-center px-6">
                <div class="profile-header">
                    <div class="logo-box" aria-hidden="true">
                        <img src="~/images/logo/logo.png" alt="Logo" />
                    </div>
                    <span class="company-name text-lg font-bold whitespace-nowrap text-slate-800 dark:text-white">Subchron</span>
                </div>
            </div>

            <hr class="sidebar-hr border-slate-200 dark:border-slate-700" />

            <!-- Navigation (KEEP CONTENT + CONNECTIONS) -->
            <nav class="mt-6 flex-1 space-y-[6px] overflow-y-auto px-4 py-4">
                @{
                    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
                    var isDashboard = string.Equals(currentPage, "/SuperAdmin/Dashboard", StringComparison.OrdinalIgnoreCase);
                    var isOrganizations = currentPage?.Contains("/SuperAdmin/Organizations") == true;
                    var isSubscriptions = currentPage?.Contains("/SuperAdmin/Subscriptions") == true;
                    var isPlans = currentPage?.Contains("/SuperAdmin/Plans") == true;
                    var isSales = currentPage?.Contains("/SuperAdmin/Sales") == true;
                    var isDemoRequests = currentPage?.Contains("/SuperAdmin/DemoRequests") == true;
                    var isAuditLogs = currentPage?.Contains("/SuperAdmin/AuditLogs") == true;
                    var isSettings = currentPage?.Contains("/SuperAdmin/Settings") == true;
                }

                <a asp-page="/SuperAdmin/Dashboard"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isDashboard ? "active" : "")"
                   aria-current="@(isDashboard ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Dashboard</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>

                <a asp-page="/SuperAdmin/Organizations/Index"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isOrganizations ? "active" : "")"
                   aria-current="@(isOrganizations ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Organizations</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>

                <a asp-page="/SuperAdmin/Subscriptions/Index"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isSubscriptions ? "active" : "")"
                   aria-current="@(isSubscriptions ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <rect x="2" y="5" width="20" height="14" rx="2" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></rect>
                        <line x1="2" y1="10" x2="22" y2="10" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></line>
                        <line x1="6" y1="15" x2="10" y2="15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></line>
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Subscriptions</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>

                <a asp-page="/SuperAdmin/Plans/Index"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isPlans ? "active" : "")"
                   aria-current="@(isPlans ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Plans</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>

                <a asp-page="/SuperAdmin/Sales/Index"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isSales ? "active" : "")"
                   aria-current="@(isSales ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Sales &amp; Expenses</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>

                <a asp-page="/SuperAdmin/DemoRequests/Index"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isDemoRequests ? "active" : "")"
                   aria-current="@(isDemoRequests ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m0 0V5a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V7a2 2 0 012-2h4z" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Demo Requests</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>

                <a asp-page="/SuperAdmin/AuditLogs/Index"
                   class="nav-item nav-focus group flex items-center gap-3 rounded-lg px-3 py-3 transition-all @(isAuditLogs ? "active" : "")"
                   aria-current="@(isAuditLogs ? "page" : null)">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Audit Logs</span>
                    <span class="nav-indicator" aria-hidden="true"></span>
                </a>
            </nav>

            <!-- Logout (connection preserved) -->
            <div class="border-t border-slate-200 p-4 dark:border-slate-700">
                <button id="logoutBtn"
                        type="button"
                        class="nav-focus flex w-full items-center gap-3 rounded-lg px-3 py-3 text-left text-slate-600 hover:bg-red-50 hover:text-red-600 dark:text-slate-400 dark:hover:bg-red-900/20">
                    <svg class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v-1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    <span class="sidebar-label font-medium whitespace-nowrap">Logout</span>
                </button>
            </div>
        </aside>

        <!-- MAIN -->
        <main class="flex-1 overflow-auto bg-slate-50 dark:bg-slate-900">
            <!-- Admin-like header card -->
            <header class="bg-white shadow-sm dark:bg-slate-800" style="margin: 20px; border-radius: 18px; padding: 16px 24px;">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <button id="mobileSidebarOpen"
                                class="rounded-lg p-2 text-slate-600 hover:bg-slate-100 md:hidden dark:text-slate-300 dark:hover:bg-slate-700"
                                type="button"
                                aria-label="Open sidebar">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>

                        <div>
                            <h1 class="text-lg font-bold text-slate-900 dark:text-white">@ViewData["PageTitle"]</h1>
                            @if (ViewData["PageDescription"] != null)
                            {
                                <p class="text-sm text-slate-500 dark:text-slate-400">@ViewData["PageDescription"]</p>
                            }
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <!-- Notification button (kept) -->
                        <button id="notificationBtn" type="button"
                                class="relative rounded-lg p-2 text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-700"
                                aria-label="Notifications">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                            </svg>
                            <span class="absolute top-1 right-1 h-2.5 w-2.5 rounded-full bg-red-500 ring-2 ring-white dark:ring-slate-800"></span>
                        </button>

                        <!-- Theme toggle (admin-like icon swap) -->
                        <button id="themeToggle" class="rounded-lg p-2 text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-700" type="button">
                            <span id="themeIcon"></span>
                        </button>

                        <!-- User profile dropdown (no Logout) -->
                        <div class="relative" id="profileMenuWrap">
                            <button id="profileMenuBtn"
                                    type="button"
                                    class="flex items-center gap-3 rounded-xl p-1.5 hover:bg-slate-100 dark:hover:bg-slate-700/60 transition"
                                    aria-haspopup="menu"
                                    aria-expanded="false">
                                <div class="header-user-text text-right">
                                    <div class="text-sm font-semibold text-slate-900 dark:text-white">@saDisplayName</div>
                                    <div class="text-xs text-slate-500 dark:text-slate-400">@(string.IsNullOrEmpty(saRoleDisplay) ? saRoleClaim : saRoleDisplay)</div>
                                </div>
                                <img src="https://ui-avatars.com/api/?name=@(Uri.EscapeDataString(saDisplayName))&background=16a34a&color=fff&bold=true"
                                     alt="Avatar"
                                     class="h-9 w-9 rounded-full border border-slate-200 object-cover dark:border-slate-700" />
                            </button>
                            <div id="profileMenu"
                                 class="absolute right-0 mt-2 hidden w-56 overflow-hidden rounded-xl border border-slate-200 bg-white shadow-xl dark:border-slate-700 dark:bg-slate-800"
                                 role="menu"
                                 aria-label="Profile menu">
                                <div class="py-2">
                                    <a asp-page="/SuperAdmin/Settings/Index" asp-route-tab="Profile"
                                       class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50 dark:text-slate-200 dark:hover:bg-slate-700/60"
                                       role="menuitem">
                                        <svg class="h-5 w-5 text-slate-500 dark:text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L9.832 16.82a4.5 4.5 0 01-1.897 1.13l-2.685.895.895-2.685a4.5 4.5 0 011.13-1.897L16.862 4.487z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.5 7.125L16.875 4.5" />
                                        </svg>
                                        <span>Edit Profile</span>
                                    </a>
                                    <a asp-page="/SuperAdmin/Settings/Index"
                                       class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50 dark:text-slate-200 dark:hover:bg-slate-700/60"
                                       role="menuitem">
                                        <svg class="h-5 w-5 text-slate-500 dark:text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
