    <!-- Logout Modal (admin-like) -->
    <div id="logoutModal" class="fixed inset-0 z-[9999] hidden items-center justify-center">
        <div id="logoutBackdrop"
             class="backdrop-blur-[1px] absolute inset-0 bg-slate-900/40"
             aria-hidden="true"></div>

        <div role="dialog" aria-modal="true" aria-labelledby="logoutTitle"
             class="relative mx-4 w-full max-w-md rounded-xl bg-white shadow-2xl dark:bg-slate-800">
            <div class="p-6">
                <h3 id="logoutTitle" class="text-lg font-semibold text-slate-900 dark:text-white">
                    Confirm logout
                </h3>
                <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">
                    Are you sure you want to log out?
                </p>

                <div class="mt-6 flex justify-end gap-3">
                    <button id="cancelLogout" type="button"
                            class="rounded-md bg-slate-100 px-3 py-2 text-slate-700 hover:bg-slate-200 dark:bg-slate-700 dark:text-slate-100 dark:hover:bg-slate-600">
                        Cancel
                    </button>

                    <button id="confirmLogout" type="button"
                            class="rounded-md bg-red-600 px-3 py-2 text-white hover:bg-red-700">
                        Logout
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        (function () {
          // ===== Theme toggle (same behavior as Admin layout) =====
          const html = document.documentElement;
          const btn = document.getElementById("themeToggle");
          const icon = document.getElementById("themeIcon");

          function setIcon() {
            const isDark = html.classList.contains("dark");
            icon.innerHTML = isDark
              ? `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.75 9.75 0 1021.752 15.002z" /></svg>`
              : `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>`;
          }

          setIcon();

          btn?.addEventListener("click", () => {
            html.classList.toggle("dark");
            localStorage.setItem("subchron-theme", html.classList.contains("dark") ? "dark" : "light");
            setIcon();
          });

          // ===== Sidebar collapse / mobile overlay (Admin layout behavior) =====
          const htmlRoot = document.getElementById("htmlRoot");
          const sidebarToggle = document.getElementById("sidebarToggle");
          const overlay = document.getElementById("sidebarOverlay");
          const mobileOpenBtn = document.getElementById("mobileSidebarOpen");

          function openMobileSidebar() {
            htmlRoot?.classList.remove("sidebar-collapsed");
            htmlRoot?.classList.add("sidebar-mobile-open");
            overlay?.classList.remove("hidden");
          }

          function closeMobileSidebar() {
            htmlRoot?.classList.remove("sidebar-mobile-open");
            overlay?.classList.add("hidden");
          }

          mobileOpenBtn?.addEventListener("click", openMobileSidebar);

          sidebarToggle?.addEventListener("click", () => {
            const isMobile = window.matchMedia("(max-width: 767px)").matches;
            if (isMobile) return closeMobileSidebar();

            htmlRoot?.classList.toggle("sidebar-collapsed");
          });

          overlay?.addEventListener("click", closeMobileSidebar);

          window.addEventListener("resize", () => {
            const isDesktop = window.matchMedia("(min-width: 768px)").matches;
            if (isDesktop) closeMobileSidebar();
          });

          // ===== Ensure active nav item is presented + focus indicator follows selection =====
          const active = document.querySelector("#sidebar nav .nav-item.active");
          if (active) {
            try { active.scrollIntoView({ block: "nearest" }); } catch (e) {}
          }

          // ===== Profile dropdown (Edit Profile, Settings; no Logout) =====
          const profileBtn = document.getElementById("profileMenuBtn");
          const profileMenu = document.getElementById("profileMenu");
          const profileWrap = document.getElementById("profileMenuWrap");
          if (profileBtn && profileMenu && profileWrap) {
            function openProfileMenu() {
              profileMenu.classList.remove("hidden");
              profileBtn.setAttribute("aria-expanded", "true");
            }
            function closeProfileMenu() {
              profileMenu.classList.add("hidden");
              profileBtn.setAttribute("aria-expanded", "false");
            }
            profileBtn.addEventListener("click", (e) => {
              e.preventDefault();
              e.stopPropagation();
              if (profileMenu.classList.contains("hidden")) openProfileMenu();
              else closeProfileMenu();
            });
            document.addEventListener("click", (e) => {
              if (!profileWrap.contains(e.target)) closeProfileMenu();
            });
            document.addEventListener("keydown", (e) => {
              if (e.key === "Escape") closeProfileMenu();
            });
          }
        })();
    </script>

    <script>
        (function () {
          // ===== Logout modal (Admin layout behavior, same connection to /Auth/Logout) =====
          const logoutBtn = document.getElementById("logoutBtn");
          const logoutModal = document.getElementById("logoutModal");
          const cancelBtn = document.getElementById("cancelLogout");
          const confirmBtn = document.getElementById("confirmLogout");

          function showModal() {
            if (!logoutModal) return;
            logoutModal.classList.remove("hidden");
            logoutModal.classList.add("flex");
            cancelBtn?.focus();
            document.addEventListener("keydown", onKeyDown);
          }

          function hideModal() {
            if (!logoutModal) return;
            logoutModal.classList.add("hidden");
            logoutModal.classList.remove("flex");
            document.removeEventListener("keydown", onKeyDown);
          }

          function onKeyDown(e) {
            if (e.key === "Escape") hideModal();
          }

          logoutBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            showModal();
          });

          cancelBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            hideModal();
          });

          confirmBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            window.location.href = "/Auth/Logout";
          });

          // click outside dialog
          logoutModal?.addEventListener("click", (e) => {
            if (e.target === logoutModal) hideModal();
          });
        })();
    </script>
</body>
