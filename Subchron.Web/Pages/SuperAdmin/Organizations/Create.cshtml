@page
@model Subchron.Web.Pages.SuperAdmin.Organizations.CreateModel
@{
    ViewData["Title"] = "Create Organization";
    ViewData["PageTitle"] = "Create Organization";
    ViewData["PageDescription"] = "Add a new organization to the system";
    Layout = "~/Pages/SuperAdmin/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="max-w-2xl">
  <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
   <form method="post">
 <div class="space-y-6">
     <div>
       <label asp-for="Input.OrgName" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
           Organization Name *
      </label>
         <input asp-for="Input.OrgName" 
  class="mt-1 block w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-subgreen-500 focus:border-transparent dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-slate-400"
placeholder="Enter organization name" />
    <span asp-validation-for="Input.OrgName" class="text-red-500 text-xs mt-1"></span>
    </div>

       <div>
     <label asp-for="Input.OrgCode" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
       Organization Code *
</label>
      <input asp-for="Input.OrgCode" 
       class="mt-1 block w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-subgreen-500 focus:border-transparent dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-slate-400"
 placeholder="Enter unique organization code (e.g., COMP001)" />
 <span asp-validation-for="Input.OrgCode" class="text-red-500 text-xs mt-1"></span>
    </div>

       <div>
<label asp-for="Input.Status" class="block text-sm font-medium text-slate-700 dark:text-slate-300">
        Initial Status
       </label>
   <select asp-for="Input.Status" 
             class="mt-1 block w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-subgreen-500 focus:border-transparent dark:bg-slate-700 dark:border-slate-600 dark:text-white">
  <option value="Trial">Trial</option>
     <option value="Active">Active</option>
       </select>
     <span asp-validation-for="Input.Status" class="text-red-500 text-xs mt-1"></span>
         </div>

      <div class="bg-slate-50 rounded-lg p-4 dark:bg-slate-700/50">
     <h4 class="text-sm font-medium text-slate-900 dark:text-white mb-2">What will be created:</h4>
       <ul class="text-sm text-slate-600 dark:text-slate-400 space-y-1">
         <li>• Organization record with the specified name and code</li>
  <li>• Default organization settings (timezone, currency, etc.)</li>
       <li>• Trial subscription (14 days) with Standard plan</li>
       <li>• Audit log entry for organization creation</li>
        </ul>
  </div>

   @if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
     <div class="bg-red-50 border border-red-200 rounded-lg p-4 dark:bg-red-900/20 dark:border-red-800">
               <div class="flex">
           <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
<div class="ml-3">
  <p class="text-sm text-red-800 dark:text-red-200">@Model.ErrorMessage</p>
  </div>
           </div>
   </div>
    }

 <div class="flex items-center justify-between">
   <a asp-page="/SuperAdmin/Organizations/Index" 
  class="inline-flex items-center px-4 py-2 border border-slate-300 rounded-lg text-sm font-medium text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:bg-slate-700 dark:border-slate-600 dark:text-slate-300 dark:hover:bg-slate-600">
         <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
        Cancel
         </a>
 <button type="submit"
     class="inline-flex items-center px-4 py-2 bg-subgreen-600 text-white text-sm font-medium rounded-lg hover:bg-subgreen-700 focus:outline-none focus:ring-2 focus:ring-subgreen-500 focus:ring-offset-2">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
   Create Organization
    </button>
 </div>
        </div>
   </form>
    </div>
</div>