@page
@model Subchron.Web.Pages.SuperAdmin.Organizations.DetailsModel
@{
    ViewData["Title"] = $"{Model.Organization.OrgName} - Details";
    ViewData["PageTitle"] = Model.Organization.OrgName;
    ViewData["PageDescription"] = $"Organization details and settings - {Model.Organization.OrgCode}";
    Layout = "~/Pages/SuperAdmin/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="max-w-6xl">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
   <!-- Main Content -->
 <div class="lg:col-span-2 space-y-8">
            <!-- Organization Overview -->
      <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Organization Overview</h2>
       <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
     @(Model.Organization.Status switch {
              "Trial" => "bg-amber-100 text-amber-800 dark:bg-amber-900/50 dark:text-amber-300",
         "Active" => "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/50 dark:text-emerald-300",
  "Suspended" => "bg-red-100 text-red-800 dark:bg-red-900/50 dark:text-red-300",
          "Expired" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300",
           _ => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300"
     })">
         @Model.Organization.Status
  </span>
      </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
   <dl class="space-y-4">
        <div>
         <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Organization ID</dt>
           <dd class="text-sm font-medium text-slate-900 dark:text-white mt-1">#@Model.Organization.OrgID</dd>
   </div>
    <div>
     <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Organization Code</dt>
       <dd class="text-sm font-medium text-slate-900 dark:text-white mt-1">@Model.Organization.OrgCode</dd>
    </div>
  <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Created</dt>
           <dd class="text-sm text-slate-900 dark:text-white mt-1">@Model.Organization.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</dd>
         </div>
       </dl>
          
     <dl class="space-y-4">
              <div>
           <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Total Employees</dt>
     <dd class="text-sm font-medium text-slate-900 dark:text-white mt-1">@Model.EmployeeCount</dd>
      </div>
       <div>
     <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Active Users</dt>
      <dd class="text-sm font-medium text-slate-900 dark:text-white mt-1">@Model.ActiveUsers</dd>
</div>
      <div>
        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Last Activity</dt>
   <dd class="text-sm text-slate-900 dark:text-white mt-1">@Model.LastActivity?.ToString("MMM dd, yyyy") ?? "No activity"</dd>
     </div>
  </dl>
     </div>
  </div>

 <!-- Organization Settings -->
            <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
       <h2 class="text-xl font-semibold text-slate-900 dark:text-white mb-6">Organization Settings</h2>
         
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Basic Settings -->
         <div>
        <h3 class="text-sm font-medium text-slate-900 dark:text-white mb-4">Basic Configuration</h3>
            <dl class="space-y-3">
              <div class="flex justify-between">
              <dt class="text-sm text-slate-600 dark:text-slate-400">Timezone</dt>
    <dd class="text-sm font-medium text-slate-900 dark:text-white">@Model.Settings.Timezone</dd>
       </div>
 <div class="flex justify-between">
  <dt class="text-sm text-slate-600 dark:text-slate-400">Currency</dt>
           <dd class="text-sm font-medium text-slate-900 dark:text-white">@Model.Settings.Currency</dd>
            </div>
            <div class="flex justify-between">
<dt class="text-sm text-slate-600 dark:text-slate-400">Attendance Mode</dt>
    <dd class="text-sm font-medium text-slate-900 dark:text-white">@Model.Settings.AttendanceMode</dd>
           </div>
       </dl>
     </div>
              
       <!-- Attendance Settings -->
      <div>
     <h3 class="text-sm font-medium text-slate-900 dark:text-white mb-4">Attendance Rules</h3>
   <dl class="space-y-3">
           <div class="flex justify-between">
           <dt class="text-sm text-slate-600 dark:text-slate-400">Manual Entry</dt>
       <dd class="text-sm">
       <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium @(Model.Settings.AllowManualEntry ? "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/50 dark:text-emerald-300" : "bg-red-100 text-red-800 dark:bg-red-900/50 dark:text-red-300")">
  @(Model.Settings.AllowManualEntry ? "Enabled" : "Disabled")
        </span>
   </dd>
     </div>
         <div class="flex justify-between">
               <dt class="text-sm text-slate-600 dark:text-slate-400">Geo Location</dt>
          <dd class="text-sm">
         <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium @(Model.Settings.RequireGeo ? "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/50 dark:text-emerald-300" : "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300")">
        @(Model.Settings.RequireGeo ? "Required" : "Optional")
           </span>
        </dd>
       </div>
     <div class="flex justify-between">
             <dt class="text-sm text-slate-600 dark:text-slate-400">Grace Period</dt>
   <dd class="text-sm font-medium text-slate-900 dark:text-white">@Model.Settings.DefaultGraceMinutes minutes</dd>
       </div>
                </dl>
    </div>
         </div>
            </div>

     <!-- Current Subscription -->
@if (Model.CurrentSubscription != null)
          {
       <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
   <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Current Subscription</h2>
        <a asp-page="/SuperAdmin/Subscriptions/Manage" asp-route-orgId="@Model.Organization.OrgID"
        class="text-sm text-subblue-600 hover:text-subblue-700 font-medium">
            Manage Subscription ?
       </a>
         </div>
   
         <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
       <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Plan</dt>
         <dd class="text-lg font-semibold text-slate-900 dark:text-white mt-1">@Model.CurrentSubscription.PlanName</dd>
           <dd class="text-sm text-slate-600 dark:text-slate-400">@Model.CurrentSubscription.AttendanceMode</dd>
           </div>
         <div>
     <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Billing</dt>
  <dd class="text-lg font-semibold text-slate-900 dark:text-white mt-1">?@Model.CurrentSubscription.FinalPrice.ToString("N2")</dd>
    <dd class="text-sm text-slate-600 dark:text-slate-400">@Model.CurrentSubscription.BillingCycle</dd>
              </div>
 <div>
          <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider dark:text-slate-400">Period</dt>
         <dd class="text-sm font-medium text-slate-900 dark:text-white mt-1">@Model.CurrentSubscription.StartDate.ToString("MMM dd") - @Model.CurrentSubscription.EndDate.ToString("MMM dd, yyyy")</dd>
           @if (Model.CurrentSubscription.Status == "Trial")
           {
  <dd class="text-sm text-amber-600 dark:text-amber-400">@Model.CurrentSubscription.DaysRemaining day(s) remaining</dd>
            }
         </div>
        </div>
       </div>
            }
        </div>

  <!-- Sidebar -->
    <div class="space-y-6">
          <!-- Quick Actions -->
 <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
      <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Quick Actions</h3>
          <div class="space-y-3">
                    <a asp-page="/SuperAdmin/Organizations/Edit" asp-route-id="@Model.Organization.OrgID"
        class="w-full inline-flex items-center justify-center px-4 py-2 border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:bg-slate-700 dark:border-slate-600 dark:text-slate-300 dark:hover:bg-slate-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
           </svg>
         Edit Organization
   </a>
           
     <a asp-page="/SuperAdmin/Subscriptions/Manage" asp-route-orgId="@Model.Organization.OrgID"
    class="w-full inline-flex items-center justify-center px-4 py-2 bg-subblue-600 text-white text-sm font-medium rounded-lg hover:bg-subblue-700 focus:outline-none focus:ring-2 focus:ring-subblue-500 focus:ring-offset-2">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 0h10a2 2 0 002-2v-2M7 7h3m3 0h3M9 11h1m1 0h2m-2 0h3" />
  </svg>
      Manage Subscription
           </a>

          @if (Model.Organization.Status != "Suspended")
 {
           <button onclick="suspendOrganization()" 
                class="w-full inline-flex items-center justify-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
         <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728" />
</svg>
          Suspend Organization
          </button>
         }
      </div>
         </div>

    <!-- Statistics -->
 <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Statistics</h3>
        <div class="space-y-4">
     <div class="flex justify-between items-center">
               <span class="text-sm text-slate-600 dark:text-slate-400">Storage Used</span>
            <span class="text-sm font-medium text-slate-900 dark:text-white">@Model.StorageUsed GB</span>
              </div>
      <div class="flex justify-between items-center">
    <span class="text-sm text-slate-600 dark:text-slate-400">API Calls (This Month)</span>
              <span class="text-sm font-medium text-slate-900 dark:text-white">@Model.ApiCallsThisMonth</span>
      </div>
   <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600 dark:text-slate-400">Attendance Records</span>
             <span class="text-sm font-medium text-slate-900 dark:text-white">@Model.AttendanceRecords</span>
  </div>
     </div>
            </div>

            <!-- Navigation -->
            <div class="bg-white rounded-2xl shadow-md border border-slate-200 p-6 dark:bg-slate-800 dark:border-slate-700">
        <a asp-page="/SuperAdmin/Organizations/Index" 
       class="inline-flex items-center text-sm text-subgreen-600 hover:text-subgreen-700 dark:text-subgreen-400 dark:hover:text-subgreen-300">
         <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Organizations
     </a>
  </div>
        </div>
    </div>
</div>

<script>
    function suspendOrganization() {
        if (confirm('Are you sure you want to suspend "@Model.Organization.OrgName"? This will disable access for all users.')) {
      // TODO: Implement suspend organization
  fetch('/SuperAdmin/Organizations/Suspend', {
                method: 'POST',
    headers: {
  'Content-Type': 'application/json',
     },
   body: JSON.stringify({ orgId: @Model.Organization.OrgID })
        }).then(response => {
        if (response.ok) {
           location.reload();
                }
            });
        }
}
</script>